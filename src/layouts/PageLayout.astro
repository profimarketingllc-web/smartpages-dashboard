---
import "~/styles/global.css";
import SmartHeader from "~/components/core/SmartHeader.astro";
import SmartSidebar from "~/components/core/SmartSidebar.astro";

const {
  sidebar = true,
  header = true,
  sticky = true,
  headerOffset = "compact",
  lang = "de", // "de" oder "en"
  title = "SmartPages",
} = Astro.props;

// âš™ï¸ Kompaktere AbstÃ¤nde fÃ¼r Cockpit-Design
const headerOffsetClass =
  headerOffset === "compact"
    ? "mt-2 md:mt-3" // frÃ¼her mt-6 â†’ kompakter
    : "mt-12"; // statt mt-24 halbiert
const stickyClass = sticky ? "sticky top-0 z-50" : "";
---

<html lang={lang} class="h-full bg-smart-surface">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- ğŸŒ SEO -->
    <meta name="robots" content="noindex, nofollow" />
    <meta
      name="description"
      content={
        lang === "de"
          ? "SmartPages Dashboard â€” DSGVO-konform und sicher."
          : "SmartPages Dashboard â€” GDPR compliant and secure."
      }
    />
    <meta name="theme-color" content="#1E2A45" />

    <!-- ğŸ§© Icons -->
    <link rel="icon" href="/favicon.ico?v=2" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="192x192" href="/favicon-192.png?v=2" />
  </head>

  <body class="min-h-screen flex font-sans text-smart-text bg-smart-surface antialiased">
    {
      sidebar ? (
        <>
          <!-- ğŸ§­ Sidebar -->
          <SmartSidebar collapsible />

          <!-- ğŸ§± Hauptinhalt -->
          <div class="flex-1 flex flex-col transition-all duration-300 bg-white">
            {header && (
              <div class={stickyClass}>
                <SmartHeader />
              </div>
            )}

            <!-- ğŸ“„ Seiteninhalt -->
            <main
              class={`flex-1 px-3 sm:px-6 md:px-8 lg:px-10 xl:px-12 py-4 md:py-6 ${header ? headerOffsetClass : ""}`}
            >
              <slot />
            </main>

            <!-- âš™ï¸ Footer -->
            <footer
              class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-white/80 backdrop-blur-sm"
            >
              {lang === "de" ? (
                <>Â© {new Date().getFullYear()} SmartPages Â· Gehostet in Europa Â· DSGVO-konform</>
              ) : (
                <>Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant</>
              )}
            </footer>
          </div>
        </>
      ) : (
        <!-- ğŸª¶ Layout ohne Sidebar -->
        <div class="flex-1 flex flex-col min-h-screen bg-white text-smart-text">
          {header && (
            <div class={stickyClass}>
              <SmartHeader />
            </div>
          )}

          <main
            class={`flex-1 px-4 md:px-8 lg:px-10 py-4 md:py-6 ${header ? headerOffsetClass : ""}`}
          >
            <slot />
          </main>

          <footer
            class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-white/80 backdrop-blur-sm"
          >
            {lang === "de" ? (
              <>Â© {new Date().getFullYear()} SmartPages Â· Gehostet in Europa Â· DSGVO-konform</>
            ) : (
              <>Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant</>
            )}
          </footer>
        </div>
      )
    }
  </body>

  <style>
    /* =======================================
       ğŸ¯ PAGE LAYOUT OPTIMIERUNG
    ======================================= */

    main {
      max-width: 1600px;
      margin: 0 auto;
      transition: all 0.3s ease-in-out;
    }

    /* GroÃŸe Bildschirme */
    @media (min-width: 1280px) {
      main {
        padding-left: 3rem;
        padding-right: 2rem;
        padding-top: 0.5rem;
      }
    }

    /* MittelgroÃŸ */
    @media (min-width: 1024px) and (max-width: 1279px) {
      main {
        padding-left: 2rem;
        padding-right: 2rem;
        padding-top: 0.4rem;
      }
    }

    /* Mobile Ansicht */
    @media (max-width: 1023px) {
      main {
        padding-left: 1rem;
        padding-right: 1rem;
        padding-top: 0.3rem;
      }
    }

    /* Kleinere Screens: Sidebar-Overlay */
    @media (max-width: 768px) {
      main {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
        padding-top: 0.25rem;
      }
    }
  </style>
</html>
