---
import "~/styles/global.css";
import SmartHeader from "~/components/core/SmartHeader.astro";
import SmartSidebar from "~/components/core/SmartSidebar.astro";

const {
  sidebar = true,
  header = true,
  sticky = true,
  headerOffset = "compact",
  lang = "de",
  title = "SmartPages",
} = Astro.props;

const headerOffsetClass = headerOffset === "compact" ? "mt-6" : "mt-24";
const stickyClass = sticky ? "sticky top-0 z-50" : "";
---

<html lang={lang} class="h-full bg-smart-surface">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "SmartPages"}</title>

    <!-- ðŸŒ Meta + SEO -->
    <meta name="robots" content="noindex, nofollow" />
    <meta
      name="description"
      content="SmartPages Dashboard â€” privacy-first and GDPR compliant."
    />
    <meta name="theme-color" content="#1E2A45" />

    <!-- ðŸ§© Favicon -->
    <link rel="icon" href="/favicon.ico?v=2" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="192x192" href="/favicon-192.png?v=2" />

    <!-- âœ… Global Styles Ã¼ber Astro-Import (kein 404 mehr) -->
  </head>

  <body class="min-h-screen flex font-sans text-smart-text bg-smart-surface antialiased">
    {
      sidebar ? (
        <>
          <!-- ðŸ§­ Sidebar -->
          <SmartSidebar client:load collapsible />

          <!-- Hauptinhalt -->
          <div class="flex-1 flex flex-col transition-all duration-300 md:ml-64 bg-white">
            {header && (
              <div class={stickyClass}>
                <SmartHeader client:load />
              </div>
            )}

            <!-- ðŸ§± Seiteninhalt -->
            <main class={`flex-1 p-6 md:p-10 ${header ? headerOffsetClass : ""}`}>
              <slot />
            </main>

            <!-- âš™ï¸ Footer -->
            <footer
              class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-white/80 backdrop-blur-sm"
            >
              Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant
            </footer>
          </div>
        </>
      ) : (
        <!-- ðŸª¶ Layout ohne Sidebar -->
        <div class="flex-1 flex flex-col min-h-screen bg-white text-smart-text">
          {header && (
            <div class={stickyClass}>
              <SmartHeader client:load />
            </div>
          )}

          <main class={`flex-1 p-6 md:p-10 ${header ? headerOffsetClass : ""}`}>
            <slot />
          </main>

          <footer
            class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-white/80 backdrop-blur-sm"
          >
            Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant
          </footer>
        </div>
      )
    }
  </body>
</html>
