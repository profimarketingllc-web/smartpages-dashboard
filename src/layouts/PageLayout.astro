const {
  sidebar = true,
  header = true,
  sticky = true,
  headerOffset = "compact",
  lang = "de", // "de" oder "en"
  title = "SmartPages",
} = Astro.props;

// Layout-Logik fÃ¼r AbstÃ¤nde & Sticky Header
const headerOffsetClass = headerOffset === "compact" ? "mt-6" : "mt-24";
const stickyClass = sticky ? "sticky top-0 z-50" : "";
