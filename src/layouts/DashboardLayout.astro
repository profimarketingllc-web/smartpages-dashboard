---
import SmartHeader from "../components/SmartHeader.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
---

<html lang="de" class="h-full bg-smart-surface">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Dashboard</title>
  </head>

  <body class="min-h-screen flex font-sans text-smart-text bg-smart-surface">
    <!-- Sidebar -->
    <Sidebar client:load />

    <!-- Main Content -->
    <div class="flex-1 flex flex-col transition-all duration-300 md:ml-64">
      <!-- Header -->
      <SmartHeader client:load />

      <!-- Page Content -->
      <main class="flex-1 p-6 md:p-10">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="text-center text-sm text-gray-500 mt-auto py-6 border-t border-gray-200">
        © {new Date().getFullYear()} SmartPages · Hosted in Europe · GDPR-compliant
      </footer>
    </div>
  </body>
</html>
