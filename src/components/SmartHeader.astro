---
const pathname = Astro.url.pathname.toLowerCase();
const isEnglish = pathname.startsWith("/en/");

const title = "SmartPages";
const subtitle = isEnglish
  ? "Go online in just 10 minutes — privacy-first and GDPR compliant."
  : "Wir bringen Dich in 10 Minuten online – ohne Technik Wissen";
---

<header class="w-full bg-[#0f1a3a] text-white shadow-md sticky top-0 z-50">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-center gap-2 md:gap-4 py-4 md:py-5 px-4 text-center md:text-left">
    
    <!-- Logo -->
    <img
      src="/SmartPages_icon_transparent.png"
      alt="SmartPages Logo"
      class="h-16 md:h-20 w-auto"
      loading="lazy"
    />

    <!-- Text -->
    <div class="leading-tight">
      <h1 class="text-2xl md:text-3xl font-extrabold tracking-tight mb-0">
        {title}
      </h1>
      <p class="text-base md:text-lg text-gray-200 font-medium mt-0">
        {subtitle}
      </p>
    </div>
  </div>
</header>
