---
/**
 * ProductCard.astro
 * Einheitliche Produktkarte mit Glow in Produktfarbe
 */

const { title, label, text, gradient, glow, action } = Astro.props;
---
<a
  href={action || "#"}
  class={`smart-tile relative block rounded-3xl text-white p-6 md:p-7 transition-all duration-300 
          bg-gradient-to-r ${gradient} ${glow} hover:translate-y-[-3px]`}
>
  {label && <span class="badge uppercase tracking-wide">{label}</span>}

  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-sm leading-snug opacity-95">{text}</p>
</a>

<style>
  a {
    min-height: 140px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  @media (min-width: 768px) {
    a {
      min-height: 160px;
      padding-top: 1.25rem;
      padding-bottom: 1.25rem;
    }
  }

  h3 {
    margin-bottom: 0.4rem;
    line-height: 1.3;
  }

  p {
    line-height: 1.4;
    margin-top: 0.25rem;
  }

  .badge {
    display: inline-block;
    margin-bottom: 0.5rem;
    font-size: 0.7rem;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.6rem;
    border-radius: 9999px;
    letter-spacing: 0.08em;
  }
</style>
