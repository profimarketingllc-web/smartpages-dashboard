  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-3">
    {items.map(item => (
      <a
        href={item.href}
        class={`
          group flex items-center gap-3 px-5 py-3 rounded-2xl
          text-sm font-medium
          bg-white text-[#1E2A45]
          transition-all duration-300
          ${
            item.type === "system"
              ? "hover:system-gradient hover:system-glow"
              : `${item.gradient} ${item.glow}`
          }
        `}
      >
        <span class="text-lg">{item.icon}</span>
        <span>{item.label}</span>
      </a>
    ))}
  </nav>

