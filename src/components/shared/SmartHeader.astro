---
// src/components/shared/SmartHeader.astro
const { title, subtitle } = Astro.props;
---

<header class="w-full bg-[#1E2A45] text-white shadow-md">
  <div class="max-w-6xl mx-auto flex items-center justify-center py-5 px-4">
    <div class="flex items-center gap-4">
      <img
        src="/SmartPages_icon_transparent.png"
        alt="SmartPages Logo"
        class="h-[74px] w-auto"
        loading="lazy"
      />

      <div class="text-left leading-tight">
        <h1 class="text-2xl font-extrabold tracking-tight">
          {title}
        </h1>
        <p class="text-lg text-gray-200 font-medium">
          {subtitle}
        </p>
      </div>
    </div>
  </div>
</header>
