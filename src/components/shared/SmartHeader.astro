---
import { t } from "~/utils/i18n/i18n";

const {
  lang = "en",
  page,
} = Astro.props;

// Texte immer vorab auflösen (KEINE JSX-Logik im Markup!)
const title = page
  ? t(lang, page, "header", "title")
  : t(lang, "login", "header", "title");

const subtitle = page
  ? t(lang, page, "header", "subtitle")
  : t(lang, "login", "header", "subtitle");
---

<header class="w-full bg-[#1E2A45] text-white shadow-md z-40 md:sticky md:top-0">
  <div class="max-w-6xl mx-auto flex items-center gap-4 py-4 px-4">

    <!-- Logo -->
    <img
      src="/SmartPages_icon_transparent.png"
      alt="SmartPages Logo"
      class="h-14 md:h-16 w-auto shrink-0"
      loading="lazy"
    />

    <!-- Text (LINKSBÜNDIG zum Logo) -->
    <div class="leading-tight">
      <h1 class="text-[1.6rem] md:text-[1.9rem] font-extrabold tracking-tight">
        {title}
      </h1>

      <p class="text-sm md:text-base text-gray-200 font-medium">
        {subtitle}
      </p>
    </div>

  </div>
</header>
