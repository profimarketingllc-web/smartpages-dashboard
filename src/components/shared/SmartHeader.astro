---
/*
  SmartHeader – Static Fallback (DE / EN via Props)
  - build-safe
  - keine i18n-Abhängigkeit
  - Sprache kommt über Props
*/

const { lang = "en" } = Astro.props;

const TEXT = {
  de: {
    title: "SmartPages",
    subtitle: "Wir bringen Dich in 10 Minuten online – ohne Technik-Wissen.",
  },
  en: {
    title: "SmartPages",
    subtitle: "We bring you online in 10 minutes – no technical skills required.",
  },
};

const content = TEXT[lang] ?? TEXT.en;
---

<header
  class="w-full border-b"
  style="
    background-color: var(--header-bg, #1E2A45);
    color: var(--header-text, #ffffff);
  "
>
  <div class="max-w-7xl mx-auto h-24 flex items-center justify-center px-6">
    
    <!-- Center Block -->
    <div class="flex items-center gap-5">

      <!-- Logo -->
      <img
        src="/SmartPages_icon_transparent.png"
        alt="SmartPages"
        class="h-14 w-auto"
      />

      <!-- Text -->
      <div class="leading-tight">
        <div
          class="text-2xl font-extrabold tracking-tight"
          style="font-family: 'Montserrat', sans-serif;"
        >
          {content.title}
        </div>
        <div class="text-base opacity-85">
          {content.subtitle}
        </div>
      </div>

    </div>

  </div>
</header>
