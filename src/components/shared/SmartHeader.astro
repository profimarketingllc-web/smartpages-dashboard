---
import { t } from "~/utils/i18n/i18n";

const { lang = "de" } = Astro.props;

// ðŸ”’ Texte VOR dem Rendern auflÃ¶sen
const title = t(lang, "header", "title");
const subtitle = t(lang, "header", "subtitle");
---

<header class="w-full bg-[#1E2A45] text-white shadow-md z-50 md:sticky md:top-0">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-center gap-2 md:gap-4 py-4 md:py-5 px-4 text-center">
    
    <img
      src="/SmartPages_icon_transparent.png"
      alt="SmartPages Logo"
      class="h-14 md:h-20 w-auto"
      loading="lazy"
    />

    <div class="leading-tight md:ml-3">
      <h1 class="text-[1.75rem] md:text-[2rem] font-extrabold tracking-tight leading-snug">
        {title}
      </h1>

      <p class="text-base md:text-lg text-gray-200 font-medium">
        {subtitle}
      </p>
    </div>
  </div>
</header>
