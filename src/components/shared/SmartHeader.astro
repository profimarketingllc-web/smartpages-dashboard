---
const { title, subtitle } = Astro.props;
---
<header class="w-full bg-[#1E2A45] text-white shadow-md z-50 md:sticky md:top-0">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-center gap-2 py-5 px-4 text-center">

    <img
      src="/SmartPages_icon_transparent.png"
      alt="SmartPages Logo"
      class="h-16 w-auto"
      loading="lazy"
    />

    <div class="leading-tight md:ml-3">
      <h1 class="text-2xl font-extrabold">{title}</h1>
      {subtitle && (
        <p class="text-base text-gray-200">{subtitle}</p>
      )}
    </div>
  </div>
</header>
