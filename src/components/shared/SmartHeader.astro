---
import { t } from "~/utils/i18n/i18n";

const {
  lang = "en",
  page,
} = Astro.props;

// Texte IMMER vorab aufl√∂sen (Astro-safe)
const title = page
  ? t(lang, page, "header", "title")
  : t(lang, "login", "header", "title");

const subtitle = page
  ? t(lang, page, "header", "subtitle")
  : t(lang, "login", "header", "subtitle");
---

<header class="w-full bg-[#1E2A45] text-white shadow-md z-40 md:sticky md:top-0">
  <div class="max-w-6xl mx-auto py-4 px-4">

    <!-- üîπ ZENTRIERTER BLOCK (Logo + Text) -->
    <div class="flex items-center justify-center gap-4">

      <!-- Logo (bewusst etwas gr√∂√üer) -->
      <img
        src="/SmartPages_icon_transparent.png"
        alt="SmartPages Logo"
        class="h-[70px] w-auto shrink-0"
        loading="lazy"
      />

      <!-- Textblock: linksb√ºndig ZUM LOGO -->
      <div class="text-left leading-tight">
        <h1 class="text-[1.7rem] md:text-[1.95rem] font-extrabold tracking-tight">
          {title}
        </h1>

        <p class="text-sm md:text-base text-gray-200 font-medium">
          {subtitle}
        </p>
      </div>

    </div>
  </div>
</header>
