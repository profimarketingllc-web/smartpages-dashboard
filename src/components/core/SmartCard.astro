---
export interface Props {
  title: string;
  description: string;
  colorFrom: string;
  colorTo: string;
  link: string;
}
const { title, description, colorFrom, colorTo, link } = Astro.props;
---

<a href={link} class="block rounded-2xl p-6 text-white shadow-lg transition-transform hover:scale-105" style={`background: linear-gradient(to bottom right, ${colorFrom}, ${colorTo});`}>
  <h2 class="text-xl font-bold mb-2">{title}</h2>
  <p class="text-sm opacity-90">{description}</p>
</a>
