---
const { color = "blue", label = "SmartProduct", glow = true } = Astro.props;

const colorMap = {
  blue: {
    from: "from-[#4E6BFF]",
    to: "to-[#657AFF]",
    shadow: "shadow-[0_4px_12px_rgba(78,107,255,0.25)]",
  },
  orange: {
    from: "from-[#F5B400]",
    to: "to-[#E47E00]",
    shadow: "shadow-[0_4px_12px_rgba(245,180,0,0.25)]",
  },
  purple: {
    from: "from-[#8B5CFF]",
    to: "to-[#A076FF]",
    shadow: "shadow-[0_4px_12px_rgba(139,92,255,0.25)]",
  },
  green: {
    from: "from-[#9AC7A0]",
    to: "to-[#7FB88A]",
    shadow: "shadow-[0_4px_12px_rgba(154,199,160,0.35)]",
  },
};

// âœ… Fallback
const safeColor = colorMap[color] || colorMap.blue;
---
<div class="max-w-4xl mx-auto mt-6 text-center">
  <span
    class={`inline-block px-6 py-2 rounded-full text-white text-lg font-semibold
      bg-gradient-to-r ${safeColor.from} ${safeColor.to}
      ${glow ? safeColor.shadow : ""}
      transition-all duration-300 hover:scale-105
    `}
  >
    {label}
  </span>
</div>
