---
import "~/styles/global.css";
import SmartHeader from "~/components/core/SmartHeader.astro";
import SmartSidebar from "~/components/core/SmartSidebar.astro";

const {
  sidebar = true,
  header = true,
  sticky = true,
  headerOffset = "compact",
  lang = "de",
  title = "SmartPages",
} = Astro.props;

const headerOffsetClass = headerOffset === "compact" ? "mt-6" : "mt-24";
const stickyClass = sticky ? "sticky top-0 z-50" : "";
---

<html lang={lang} class="h-full bg-[#f8fafc]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "SmartPages"}</title>
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content="SmartPages Dashboard â€” privacy-first and GDPR compliant." />
    <meta name="theme-color" content="#1E2A45" />
    <link rel="icon" href="/favicon.ico?v=2" />
    <link rel="apple-touch-icon" sizes="192x192" href="/favicon-192.png?v=2" />
    <meta name="theme-color" content="#1e293b" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="min-h-screen flex font-sans text-smart-text bg-[#f8fafc] antialiased overflow-x-hidden">
    {
      sidebar ? (
        <>
          <!-- ðŸ§­ Sidebar -->
          <SmartSidebar client:load collapsible />

          <!-- Hauptbereich -->
          <div
            class="flex-1 flex flex-col transition-all duration-300 md:ml-64 bg-[#f8fafc]"
          >
            {header && (
              <div class={stickyClass}>
                <SmartHeader client:load />
              </div>
            )}

            <!-- Hauptinhalt -->
            <main class={`flex-1 p-6 md:p-10 ${header ? headerOffsetClass : ""}`}>
              <slot />
            </main>

            <!-- Footer -->
            <footer
              class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-[#f8fafc]"
            >
              Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant
            </footer>
          </div>
        </>
      ) : (
        <!-- Layout ohne Sidebar -->
        <div class="flex-1 flex flex-col min-h-screen bg-[#f8fafc] text-smart-text">
          {header && (
            <div class={stickyClass}>
              <SmartHeader client:load />
            </div>
          )}

          <main class={`flex-1 p-6 md:p-10 ${header ? headerOffsetClass : ""}`}>
            <slot />
          </main>

          <footer
            class="text-center text-sm text-gray-500 py-4 border-t border-gray-200 bg-[#f8fafc]"
          >
            Â© {new Date().getFullYear()} SmartPages Â· Hosted in Europe Â· GDPR-compliant
          </footer>
        </div>
      )
    }
  </body>
</html>
