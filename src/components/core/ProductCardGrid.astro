---
import ProductCard from "~/components/core/ProductCard.astro";
const { products } = Astro.props;
---

<section class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6 px-6 mb-10">
  {products.map((p) => (
    <ProductCard
      title={p.title}
      label={p.label}
      text={p.text}
      gradient={p.gradient}
    />
  ))}
</section>
