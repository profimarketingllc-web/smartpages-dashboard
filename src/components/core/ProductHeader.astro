---
const { name = "SmartProduct", color = "profile" } = Astro.props;

const gradients = {
  profile: "from-[#4E6BFF] to-[#657AFF]",
  page: "from-[#F5B400] to-[#E47E00]",
  domain: "from-[#8B5CFF] to-[#A076FF]",
};
---

<!-- ðŸŸ© Produkt Header Pill -->
<div class="max-w-6xl mx-auto flex justify-center mt-6">
  <div
    class={`px-10 py-3 text-white font-semibold rounded-full 
            bg-gradient-to-r ${gradients[color]} text-lg tracking-wide select-none
            shadow-[0_6px_16px_rgba(0,0,0,0.12),0_2px_4px_rgba(0,0,0,0.08)]
            border border-white/10 backdrop-blur-sm`}
  >
    {name}
  </div>
</div>
