---
const { color = "blue", label = "SmartProduct", glow = true } = Astro.props;

// üé® Farbdefinitionen (Tailwind-Klassen)
const colorMap = {
  blue: {
    from: "from-[#4E6BFF]",
    to: "to-[#657AFF]",
    shadow: "shadow-[0_4px_12px_rgba(78,107,255,0.25)]",
  },
  orange: {
    from: "from-[#F5B400]",
    to: "to-[#E47E00]",
    shadow: "shadow-[0_4px_12px_rgba(245,180,0,0.25)]",
  },
  purple: {
    from: "from-[#8B5CFF]",
    to: "to-[#A076FF]",
    shadow: "shadow-[0_4px_12px_rgba(139,92,255,0.25)]",
  },

  // üåø Optional: SmartLinks (Salbei)
  sage: {
    from: "from-[#9DB8A0]",
    to: "to-[#7FAF8B]",
    shadow: "shadow-[0_4px_12px_rgba(127,175,139,0.25)]",
  },

  // ü©∂ Optional: Billing (Silber)
  silver: {
    from: "from-[#C9CCD3]",
    to: "to-[#AEB3BD]",
    shadow: "shadow-[0_4px_12px_rgba(174,179,189,0.25)]",
  },
};

// üõ°Ô∏è Fallback-Schutz (WICHTIG!)
const safeColor = colorMap[color] ? color : "blue";
const activeColor = colorMap[safeColor];
---

<div class="max-w-4xl mx-auto mt-6 text-center">
  <span
    class={`inline-block px-6 py-2 rounded-full text-white text-lg font-semibold
      bg-gradient-to-r ${activeColor.from} ${activeColor.to}
      ${glow ? activeColor.shadow : ""}
      transition-all duration-300 hover:scale-105
    `}
  >
    {label}
  </span>
</div>
