---
const {
  color = "blue",
  label = "SmartProduct",
  glow = true
} = Astro.props;

const colorMap = {
  blue: {
    from: "from-[#4F6EF7]",
    to: "to-[#657AFF]",
    shadow: "shadow-[0_4px_12px_rgba(79,110,247,0.35)]",
  },
  orange: {
    from: "from-[#F5B400]",
    to: "to-[#E47E00]",
    shadow: "shadow-[0_4px_12px_rgba(245,180,0,0.35)]",
  },
  purple: {
    from: "from-[#8B5CFF]",
    to: "to-[#A076FF]",
    shadow: "shadow-[0_4px_12px_rgba(139,92,255,0.35)]",
  },
  green: {
    from: "from-[#7FB69D]",
    to: "to-[#9ED2B6]",
    shadow: "shadow-[0_4px_12px_rgba(127,182,157,0.35)]",
  },
};

// üõ°Ô∏è Defensive Fallback
const activeColor = colorMap[color] ?? colorMap.blue;
---

<div class="max-w-4xl mx-auto mt-6 text-center">
  <span
    class={`inline-block px-6 py-2 rounded-full text-white text-lg font-semibold
      bg-gradient-to-r ${activeColor.from} ${activeColor.to}
      ${glow ? activeColor.shadow : ""}
      transition-all duration-300 hover:scale-105
    `}
  >
    {label}
  </span>
</div>
