---
/**
 * Kompakte System-Message (rechts unter Header)
 * Props:
 * - message: string | null
 * - type: "info" | "warning" | "success" | "error"
 */
const { message = null, type = "info" } = Astro.props;

if (!message) return null;

const colorClasses = {
  info: "bg-blue-50 text-blue-800 border-blue-200",
  success: "bg-green-50 text-green-800 border-green-200",
  warning: "bg-yellow-50 text-yellow-800 border-yellow-200",
  error: "bg-red-50 text-red-800 border-red-200",
}[type];
---

<div
  class={`SystemMessage border ${colorClasses} rounded-xl shadow-sm py-2 px-4 text-sm font-medium text-right max-w-md`}
>
  {message}
</div>

<style>
  .SystemMessage {
    transition: all 0.3s ease-in-out;
  }

  @media (max-width: 768px) {
    .SystemMessage {
      text-align: center;
      max-width: 95%;
    }
  }
</style>
