---
/**
 * SmartPages â€“ SystemMessage
 *
 * Props:
 * - message: string | null
 * - type: "info" | "warning" | "success" | "error"
 */

const { message = null, type = "info" } = Astro.props;

if (!message) {
  return null;
}

const colorClasses = {
  info: "bg-blue-50 text-blue-800 border-blue-200",
  success: "bg-green-50 text-green-800 border-green-200",
  warning: "bg-yellow-50 text-yellow-800 border-yellow-200",
  error: "bg-red-50 text-red-800 border-red-200",
}[type];
---

<section
  class={`w-full flex justify-center px-4 sm:px-6 md:px-10 mt-6 md:mt-8 transition-all duration-300`}
>
  <div
    class={`max-w-5xl w-full border ${colorClasses} rounded-2xl shadow-sm py-3.5 px-6 text-sm font-medium text-center`}
  >
    {message}
  </div>
</section>
