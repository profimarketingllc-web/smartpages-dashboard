---
const { title, label, text, gradient } = Astro.props;
---

<div
  class={`relative flex flex-col justify-between p-6 rounded-2xl shadow-lg border border-gray-100 bg-gradient-to-br ${gradient} text-white transition-all duration-300 transform hover:scale-[1.03] hover:shadow-[0_0_30px_8px_rgba(245,180,0,0.45)]`}
>
  <div>
    <h3 class="text-2xl font-extrabold mb-3 leading-snug drop-shadow-md">{title}</h3>
    <p class="text-sm leading-relaxed text-white/90">{text}</p>
  </div>

  {label && (
    <span
      class="absolute top-4 right-4 text-xs font-semibold uppercase tracking-wide bg-white/90 text-[#1E2A45] px-3 py-1 rounded-full shadow-sm"
    >
      {label}
    </span>
  )}
</div>
