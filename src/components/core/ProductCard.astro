---
/**
 * ProductCard.astro
 * Einheitliche Produktkarte mit Glow in Produktfarbe
 */

const { title, label, text, gradient, glow, action } = Astro.props;
---

<a
  href={action || "#"}
  class={`smart-tile relative block rounded-3xl text-white p-6 md:p-7 transition-all duration-300 
          bg-gradient-to-r ${gradient} ${glow} hover:translate-y-[-3px]`}
>
  {label && (
    <span class="badge uppercase tracking-wide">{label}</span>
  )}

  <h3 class="text-xl font-bold mb-3">{title}</h3>
  <p class="text-sm leading-relaxed opacity-95">{text}</p>
</a>

<style>
  a {
    min-height: 200px;
  }

  @media (min-width: 768px) {
    a {
      min-height: 210px;
    }
  }
</style>
