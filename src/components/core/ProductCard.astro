---
const {
  title,
  label,
  text,
  gradient = "from-[#4E6BFF] to-[#657AFF]",
} = Astro.props;
---

<div
  class={`rounded-2xl p-6 shadow-xl bg-gradient-to-r ${gradient} text-white 
          hover:shadow-[0_0_25px_4px_rgba(0,0,0,0.15)] 
          hover:scale-[1.03] transition-all duration-300 ease-in-out`}
>
  <h3 class="text-2xl font-bold mb-2 flex items-center justify-between">
    <span>{title}</span>
    {label && (
      <span
        class="text-xs bg-white/90 text-[#1E2A45] font-semibold rounded-full px-2 py-[2px]"
      >
        {label}
      </span>
    )}
  </h3>

  <p class="mt-2 text-base leading-relaxed">
    {text}
  </p>
</div>
