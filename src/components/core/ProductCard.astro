---
/**
 * ProductCard.astro (Unified Height Edition)
 * ------------------------------------------
 * Einheitliche Kartenhöhe für sauberes Layout.
 * Responsive, dynamisch und visuell ausbalanciert.
 */

const { title, label, text, gradient, glow, action } = Astro.props;
---

<a
  href={action || "#"}
  class={`relative flex flex-col justify-between rounded-2xl text-white 
          bg-gradient-to-r ${gradient} shadow-md ${glow} transition-all duration-300 
          hover:scale-[1.02] hover:shadow-lg min-h-[180px] md:min-h-[200px] p-6`}
>
  <div>
    <h3 class="text-lg md:text-xl font-bold mb-2">{title}</h3>
    {label && (
      <span class="absolute top-3 right-4 text-xs bg-white/20 px-3 py-0.5 rounded-full">
        {label}
      </span>
    )}
    <p class="text-sm leading-snug text-white/90">{text}</p>
  </div>
</a>

<style>
  a {
    text-decoration: none;
    display: flex;
  }

  a:hover {
    transform: translateY(-2px);
  }
</style>
