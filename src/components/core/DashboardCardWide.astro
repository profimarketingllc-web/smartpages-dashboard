---
/**
 * SmartPages ‚Äì DashboardCardWide (Optimized Premium Version)
 *
 * Verbesserte Innenabst√§nde f√ºr gleichm√§√üige Darstellung aller Komponenten.
 * - Harmonischer Raum nach oben & unten
 * - Keine Layout-Verschiebung f√ºr bestehende Inhalte
 * - Bessere Integration f√ºr ProductGrid, CustomerCard, etc.
 */

const {
  title = "",
  desc = "",
  items = [],
  buttonText = "",
  showButton = false,
  showStatus = false,
  status = "",
  statusColor = "gray",
  variant = "default",
} = Astro.props;

const variantClasses = {
  default:
    "bg-white border border-gray-100 shadow-[0_4px_12px_rgba(0,0,0,0.04)] rounded-3xl w-full transition-all duration-300 hover:shadow-[0_6px_16px_rgba(0,0,0,0.08)]",
  highlight:
    "bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white shadow-lg rounded-3xl w-full transition-all duration-300 hover:shadow-[0_8px_20px_rgba(0,0,0,0.15)]",
}[variant];

const pillColors = {
  green: "bg-[#C8F3C1] text-[#1E2A45] border-[#A7E1A0]",
  red: "bg-[#F8D7DA] text-[#8B1A1A] border-[#E6A1A1]",
  gray: "bg-gray-200 text-gray-700 border-gray-300",
}[statusColor];
---

<section class="w-full flex justify-center">
  <!-- üì¶ Au√üencontainer -->
  <div class={`mx-auto w-[92%] xl:w-[95%] ${variantClasses} p-8 md:p-10 flex flex-col`}>
    <!-- üîπ Titel -->
    {title && (
      <h2
        class={`text-2xl font-semibold mb-4 ${
          variant === "highlight" ? "text-white" : "text-[#1E2A45]"
        }`}
      >
        {title}
      </h2>
    )}

    <!-- üîπ Beschreibung -->
    {desc && (
      <p
        class={`text-base mb-6 leading-relaxed ${
          variant === "highlight" ? "text-gray-100" : "text-gray-600"
        }`}
      >
        {desc}
      </p>
    )}

    <!-- üìç Slot-Inhalt ‚Äì jetzt mit zentriertem Layout -->
    <div class="flex justify-center w-full mt-2 mb-2">
      <slot />
    </div>

    <!-- üî∏ Optional: Info-Items -->
    {items.length > 0 && (
      <div
        class={`grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-3 mt-6 ${
          variant === "highlight" ? "text-white" : "text-gray-700"
        }`}
      >
        {items.map((item) => (
          <p>
            <span class="font-semibold">{item.label}:</span>{" "}
            {item.value || "‚Äî"}
          </p>
        ))}
      </div>
    )}

    <!-- üî∏ Optional: Button -->
    {showButton && buttonText && (
      <div class="flex justify-center mt-8">
        <button
          type="button"
          class="px-6 py-2 bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300"
        >
          {buttonText}
        </button>
      </div>
    )}

    <!-- üî∏ Optional: Status-Pill -->
    {showStatus && status && (
      <div class="mt-6 flex justify-end">
        <span
          class={`inline-block px-4 py-1.5 text-sm rounded-full border font-medium min-w-[110px] text-center ${pillColors}`}
        >
          {status}
        </span>
      </div>
    )}
  </div>
</section>

<style>
  /* üéØ Verbesserte Innenabst√§nde */
  @media (max-width: 768px) {
    section > div {
      padding: 1.5rem;
    }
  }

  section {
    transition: all 0.3s ease-in-out;
  }
</style>
