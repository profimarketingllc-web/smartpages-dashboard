---
/**
 * SmartPages â€“ DashboardCardWide (Above Fold Optimized)
 *
 * Ziel:
 * - Kompaktes, symmetrisches Padding
 * - Perfekte Balance fÃ¼r Above-the-Fold-PrÃ¤sentation
 * - Besseres Zusammenspiel mit ProductGrid
 */

const {
  title = "",
  desc = "",
  items = [],
  buttonText = "",
  showButton = false,
  showStatus = false,
  status = "",
  statusColor = "gray",
  variant = "default",
} = Astro.props;

const variantClasses = {
  default:
    "bg-white border border-gray-100 shadow-[0_3px_10px_rgba(0,0,0,0.04)] rounded-3xl w-full transition-all duration-300 hover:shadow-[0_5px_14px_rgba(0,0,0,0.07)]",
  highlight:
    "bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white shadow-lg rounded-3xl w-full transition-all duration-300 hover:shadow-[0_7px_18px_rgba(0,0,0,0.10)]",
}[variant];

const pillColors = {
  green: "bg-[#C8F3C1] text-[#1E2A45] border-[#A7E1A0]",
  red: "bg-[#F8D7DA] text-[#8B1A1A] border-[#E6A1A1]",
  gray: "bg-gray-200 text-gray-700 border-gray-300",
}[statusColor];
---

<section class="w-full flex justify-center my-1">
  <div
    class={`mx-auto w-[92%] xl:w-[95%] ${variantClasses} 
            px-4 sm:px-6 md:px-8 py-3 sm:py-3.5 md:py-4 flex flex-col items-center`}
  >
    {title && (
      <h2
        class={`text-2xl font-semibold mb-3 ${
          variant === "highlight" ? "text-white" : "text-[#1E2A45]"
        }`}
      >
        {title}
      </h2>
    )}

    {desc && (
      <p
        class={`text-base mb-4 leading-relaxed text-center ${
          variant === "highlight" ? "text-gray-100" : "text-gray-600"
        }`}
      >
        {desc}
      </p>
    )}

    <!-- ðŸ“¦ Inhalt -->
    <div class="flex justify-center w-full my-1">
      <slot />
    </div>

    {items.length > 0 && (
      <div
        class={`grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-3 mt-3 ${
          variant === "highlight" ? "text-white" : "text-gray-700"
        }`}
      >
        {items.map((item) => (
          <p>
            <span class="font-semibold">{item.label}:</span>{" "}
            {item.value || "â€”"}
          </p>
        ))}
      </div>
    )}

    {showButton && buttonText && (
      <div class="flex justify-center mt-4">
        <button
          type="button"
          class="px-6 py-2 bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300"
        >
          {buttonText}
        </button>
      </div>
    )}

    {showStatus && status && (
      <div class="mt-3 flex justify-end w-full">
        <span
          class={`inline-block px-4 py-1 text-sm rounded-full border font-medium min-w-[110px] text-center ${pillColors}`}
        >
          {status}
        </span>
      </div>
    )}
  </div>
</section>

<style>
  section {
    transition: all 0.3s ease-in-out;
  }

  /* Kompakteres Padding fÃ¼r Mobile */
  @media (max-width: 768px) {
    section > div {
      padding: 0.75rem 1rem !important;
    }
  }
</style>
