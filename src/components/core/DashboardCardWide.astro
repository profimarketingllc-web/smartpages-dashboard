
---
/**
 * SmartPages – DashboardCardWide (Final Premium Version)
 * 
 * Einheitliches Layout für breite Dashboard-Karten:
 * - Saubere Integration mit PageLayout (keine doppelten Paddings)
 * - Premium-Optik mit sanften Schatten, abgerundeten Ecken
 * - Responsive Verhalten (volle Breite auf mobilen Geräten)
 * 
 * Props:
 * - title?: string
 * - desc?: string
 * - items?: Array<{ label: string, value: string }>
 * - buttonText?: string
 * - showButton?: boolean
 * - showStatus?: boolean
 * - status?: string
 * - statusColor?: "green" | "red" | "gray"
 * - variant?: "default" | "highlight"
 */

const {
  title = "",
  desc = "",
  items = [],
  buttonText = "",
  showButton = false,
  showStatus = false,
  status = "",
  statusColor = "gray",
  variant = "default",
} = Astro.props;

const variantClasses = {
  default:
    "bg-white border border-gray-100 shadow-[0_4px_12px_rgba(0,0,0,0.04)] rounded-3xl w-full transition-all duration-300 hover:shadow-[0_6px_16px_rgba(0,0,0,0.08)]",
  highlight:
    "bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white shadow-lg rounded-3xl w-full transition-all duration-300 hover:shadow-[0_8px_20px_rgba(0,0,0,0.15)]",
}[variant];

const pillColors = {
  green: "bg-[#C8F3C1] text-[#1E2A45] border-[#A7E1A0]",
  red: "bg-[#F8D7DA] text-[#8B1A1A] border-[#E6A1A1]",
  gray: "bg-gray-200 text-gray-700 border-gray-300",
}[statusColor];
---

<section class={`w-full flex justify-center`}>
 <div class={`${variantClasses} p-6 sm:p-8 md:p-10 lg:p-12 max-w-[90%] xl:max-w-[1800px]`}>
    {title && (
      <h2
        class={`text-2xl font-semibold mb-4 ${
          variant === "highlight" ? "text-white" : "text-[#1E2A45]"
        }`}
      >
        {title}
      </h2>
    )}

    {desc && (
      <p
        class={`text-base mb-6 leading-relaxed ${
          variant === "highlight" ? "text-gray-100" : "text-gray-600"
        }`}
      >
        {desc}
      </p>
    )}

    <div class="flex flex-col gap-4">
      <slot />
    </div>

    {items.length > 0 && (
      <div
        class={`grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-3 mt-6 ${
          variant === "highlight" ? "text-white" : "text-gray-700"
        }`}
      >
        {items.map((item) => (
          <p>
            <span class="font-semibold">{item.label}:</span>{" "}
            {item.value || "—"}
          </p>
        ))}
      </div>
    )}

    {showButton && buttonText && (
      <div class="flex justify-center mt-8">
        <button
          type="button"
          class="px-6 py-2 bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300"
        >
          {buttonText}
        </button>
      </div>
    )}

    {showStatus && status && (
      <div class="mt-6 flex justify-end">
        <span
          class={`inline-block px-4 py-1.5 text-sm rounded-full border font-medium min-w-[110px] text-center ${pillColors}`}
        >
          {status}
        </span>
      </div>
    )}
  </div>
</section>

<style>
  section {
    transition: all 0.3s ease-in-out;
  }

  /* Visuell angenehmere Abstände */
  @media (max-width: 768px) {
    section > div {
      padding: 1.25rem;
    }
  }

  /* Sicherstellen, dass die Card sich der Gesamtbreite anpasst */
  section > div {
    width: 100%;
  }
</style>
