---
const { label, value = "", placeholder = "", type = "text", required = false } = Astro.props;
---

<div class="flex flex-col">
  {label && <label class="text-sm font-medium text-gray-700 mb-1">{label}</label>}
  <input
    type={type}
    value={value}
    placeholder={placeholder}
    required={required}
    class="border border-gray-300 rounded-xl px-3 py-2 text-sm text-gray-700
           focus:ring-2 focus:ring-indigo-500 focus:outline-none"
  />
</div>
