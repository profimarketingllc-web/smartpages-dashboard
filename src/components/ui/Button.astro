---
const { label = "Speichern", type = "button", variant = "primary" } = Astro.props;

const base = "rounded-xl px-5 py-2 font-medium text-sm transition focus:outline-none";
const variants = {
  primary: "bg-indigo-600 text-white hover:bg-indigo-700 shadow",
  secondary: "bg-gray-200 text-gray-700 hover:bg-gray-300",
  success: "bg-emerald-600 text-white hover:bg-emerald-700",
};
---

<button type={type} class={`${base} ${variants[variant]}`}>{label}</button>
