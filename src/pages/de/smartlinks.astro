---
import PageLayout from "~/layouts/PageLayout.astro";
const { label, color = "pages" } = Astro.props;
---

<div class={`inline-block px-4 py-2 rounded-full text-white bg-smart-full-${color}`}>
  {label}
</div>
<PageLayout title="SmartLinks – SmartPages" sidebar={true} header={true}>
  <h1 class="text-2xl font-bold text-smart-full-links mt-10 text-center">
    ✅ SmartLinks Page funktioniert!
  </h1>
</PageLayout>
