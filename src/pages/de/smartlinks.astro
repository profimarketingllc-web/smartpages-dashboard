---
import PageLayout from "@/layouts/PageLayout.astro";
import ProductPill from "@/components/core/ProductPill.astro";
import Card from "@/components/ui/Card.astro";
import ProductForm from "@/components/editor/ProductForm.astro";
import ProductPreview from "@/components/editor/ProductPreview.astro";

const schema = [
  { key: "title", label: "Link-Titel", type: "text" },
  { key: "url", label: "Ziel-URL", type: "text" },
  { key: "description", label: "Beschreibung (optional)", type: "textarea", rows: 3 },
];

const smartlink = {
  title: "Mein Lieblingslink",
  url: "https://example.com",
  description: "Hier findest du alle wichtigen Infos zu meinem Projekt.",
  slug: "mein-link",
};
---

<PageLayout title="SmartLinks â€“ SmartPages" sidebar={true} header={true}>
  <ProductPill label="SmartLinks" color="#91C7A0" />

  <div class="max-w-4xl mx-auto mt-10 space-y-8">
    <Card title="Link bearbeiten">
      <ProductForm schema={schema} data={smartlink} />
    </Card>

    <Card title="Vorschau">
      <ProductPreview slug={smartlink.slug} />
    </Card>
  </div>
</PageLayout>
