---
/**
 * SmartPages – kompakte SystemMessage (rechtsbündig)
 *
 * Props:
 * - message: string | null
 * - type: "info" | "warning" | "success" | "error"
 */

const { message = null, type = "info" } = Astro.props;

if (!message) {
  return null;
}

const colorClasses = {
  info: "bg-blue-50 text-blue-800 border-blue-200",
  success: "bg-green-50 text-green-800 border-green-200",
  warning: "bg-yellow-50 text-yellow-800 border-yellow-200",
  error: "bg-red-50 text-red-800 border-red-200",
}[type];
---

<section
  class={`w-full flex justify-end px-4 sm:px-6 md:px-10 mt-2 transition-all duration-300`}
>
  <div
    class={`max-w-md border ${colorClasses} rounded-xl shadow-sm py-2 px-4 text-sm font-medium text-right`}
  >
    {message}
  </div>
</section>

<style>
  @media (max-width: 768px) {
    section {
      justify-content: center;
      margin-top: 0.5rem;
    }
    div {
      text-align: center;
      width: 100%;
      max-width: 90%;
    }
  }
</style>
