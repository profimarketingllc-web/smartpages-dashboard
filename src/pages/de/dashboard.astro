---
export const prerender = false;

import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import PrivacyCard from "~/components/solid/PrivacyCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
import EditCustomerModal from "~/components/solid/EditCustomerModal.jsx";
import EditImprintModal from "~/components/solid/EditImprintModal.jsx";
import EditPrivacyModal from "~/components/solid/EditPrivacyModal.jsx";

// üîπ SSR-seitige Sessionpr√ºfung
const cookie = Astro.request.headers.get("cookie") || "";
if (!cookie.includes("session=")) {
  return Astro.redirect("/de/login");
}
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true} lang="de">
  <main
    class="dashboard-wrapper flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- üîπ Benutzerinfo + Systemstatus -->
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start">
      <DashboardCardWide>
        <CustomerCard client:only="solid-js" lang="de" />
      </DashboardCardWide>

      <div class="system-message">
        <SystemMessage lang="de" />
      </div>
    </section>

    <!-- üßæ Impressum -->
    <DashboardCardWide>
      <ImprintCard client:only="solid-js" lang="de" />
    </DashboardCardWide>

    <!-- üîí Datenschutzerkl√§rung -->
    <DashboardCardWide>
      <PrivacyCard client:only="solid-js" lang="de" />
    </DashboardCardWide>

    <!-- üß© Produkt√ºbersicht -->
    <section class="mt-4 md:mt-6">
      <ProductGrid lang="de" />
    </section>

    <!-- üß† Modals -->
    <EditCustomerModal client:only="solid-js" lang="de" />
    <EditImprintModal client:only="solid-js" lang="de" />
    <EditPrivacyModal client:only="solid-js" lang="de" />
  </main>
</PageLayout>

<script>
  window.addEventListener("DOMContentLoaded", async () => {
    console.log("üá©üá™ Dashboard aktiv ‚Äî Pr√ºfe Session & lade Daten ...");

    // üîπ Sessionpr√ºfung beim Laden
    try {
      const res = await fetch("https://api.smartpages.online/api/session/check", {
        credentials: "include"
      });
      const data = await res.json();
      if (!data.ok) {
        console.warn("‚ö†Ô∏è Keine g√ºltige Session, redirect ...");
        window.location.href = "/de/login";
      } else {
        console.log("‚úÖ Session OK:", data.session.email);
      }
    } catch (e) {
      console.error("‚ùå Sessionpr√ºfung fehlgeschlagen:", e);
      window.location.href = "/de/login";
    }
  });
</script>
