---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/core/CustomerCard.jsx";
import ImprintCard from "~/components/core/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import ProductCard from "~/components/core/ProductCard.astro";

const systemNotice = {
  message: "Dein Testzeitraum endet in 3 Tagen. Jetzt upgraden und alle Funktionen behalten!",
  type: "warning",
};

// Dezente 80%-FarbintensitÃ¤t
const gradient =
  systemNotice.type === "warning"
    ? "from-[#F5B400]/80 to-[#E47E00]/80"
    : systemNotice.type === "info"
    ? "from-[#4E6BFF]/80 to-[#657AFF]/80"
    : systemNotice.type === "success"
    ? "from-[#3CB371]/80 to-[#2E8B57]/80"
    : "from-[#E14D4D]/80 to-[#B83535]/80";
---

<PageLayout title="Dashboard â€“ SmartPages" sidebar={true} header={true}>

  <main
    class="grid grid-cols-1 lg:grid-cols-[minmax(0,1.1fr)_340px] gap-8 w-full max-w-[1500px] mx-auto px-4 sm:px-6 md:px-8 mt-1 mb-20 transition-all duration-300"
  >
    <!-- ðŸ“± SystemMessage (oben bei Mobile) -->
    <div class="lg:hidden w-full flex justify-center mt-1 mb-2">
      <ProductCard title="Hinweis" text={systemNotice.message} gradient={gradient} />
    </div>

    <!-- ðŸ”¹ Hauptbereich: DashboardCards -->
    <div class="flex flex-col gap-10 items-center w-full mx-auto mt-0">
      <!-- ðŸ§­ Kundendaten -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- ðŸ¢ Impressumsdaten -->
      <DashboardCardWide>
        <ImprintCard client:load />
      </DashboardCardWide>

      <!-- ðŸ§± Produkte -->
      <DashboardCardWide>
        <ProductGrid />
      </DashboardCardWide>

      <!-- ðŸ’¬ Feedback -->
      <DashboardCardWide>
        <section class="text-center text-gray-700">
          <h3 class="font-semibold text-lg mb-2">
            Dein Feedback hilft uns, SmartPages zu verbessern
          </h3>
          <p class="text-gray-600 text-sm mb-4">
            Teile Ideen, VorschlÃ¤ge oder Fehler direkt mit unserem Team â€“
            wir entwickeln SmartPages aktiv weiter auf Basis deines Feedbacks.
          </p>
          <a
            href="/feedback"
            class="inline-block bg-[#C94C43] hover:bg-[#B33D35] text-white px-6 py-2 rounded-xl shadow transition-all duration-200"
          >
            Feedback senden
          </a>
        </section>
      </DashboardCardWide>
    </div>

    <!-- ðŸ”¸ Rechte Spalte: SystemMessage -->
    <aside class="hidden lg:flex flex-col items-start justify-start mt-3">
      <ProductCard title="Hinweis" text={systemNotice.message} gradient={gradient} />
    </aside>
  </main>

  <style>
    /* =======================================
       ðŸŽ¯ DASHBOARD â€“ SYMMETRIE & DEZENTHEIT
    ======================================= */

    main {
      transition: all 0.3s ease-in-out;
      margin-top: 0.4rem; /* reduziert den Weissraum */
    }

    /* ðŸ§­ Cards â€“ breiter fÃ¼r optisches Gleichgewicht */
    main > div > * {
      width: 100%;
      max-width: 1220px;
      transition: all 0.3s ease-in-out;
    }

    /* ðŸ”¸ Rechte Spalte */
    aside > * {
      width: 100%;
      max-width: 340px;
      margin-top: 0.4rem;
    }

    /* ðŸ”¹ Zentrierung & Balance bei kleineren Bildschirmen */
    @media (max-width: 1440px) {
      main {
        max-width: 1350px;
        gap: 6;
      }
      main > div > * {
        max-width: 1150px;
      }
    }

    /* ðŸ“± Mobile Layout */
    @media (max-width: 1024px) {
      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.2rem;
        margin-top: 0.3rem;
      }
      aside {
        display: none !important;
      }
    }

    @media (max-width: 768px) {
      main {
        gap: 1rem;
        margin-top: 0.2rem;
      }
    }
  </style>

</PageLayout>
