---
import { createSignal, onMount, Show } from "solid-js";
import { CustomerCard } from "../../components/CustomerCard.jsx";

---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Dashboard</title>
  </head>

  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <header class="bg-[#1b253b] text-white py-4 shadow-md">
      <div class="container mx-auto flex items-center justify-between px-6">
        <div class="flex items-center space-x-3">
          <img src="/assets/logo.svg" alt="SmartPages Logo" class="w-8 h-8" />
          <div>
            <h1 class="text-xl font-bold">SmartPages</h1>
            <p class="text-sm text-gray-300">
              Wir bringen Dich in 10 Minuten online – ohne Technik Wissen
            </p>
          </div>
        </div>
      </div>
    </header>

    <main class="flex flex-1">
      <!-- Sidebar -->
      <aside class="w-64 bg-[#1b253b] text-white flex flex-col justify-between">
        <nav class="flex flex-col space-y-3 p-4">
          <a href="#" class="rounded-2xl px-4 py-3 bg-gradient-to-b from-yellow-400 to-orange-500 text-gray-900 font-semibold">Cockpit</a>
          <a href="#" class="rounded-2xl px-4 py-3 bg-[#26334f] hover:bg-[#2e3d5c]">SmartProfile</a>
          <a href="#" class="rounded-2xl px-4 py-3 bg-[#26334f] hover:bg-[#2e3d5c]">SmartPage</a>
          <a href="#" class="rounded-2xl px-4 py-3 bg-[#26334f] hover:bg-[#2e3d5c]">SmartDomain</a>
        </nav>
        <div class="p-4">
          <button class="w-full rounded-xl bg-indigo-600 hover:bg-indigo-700 py-2 px-4 text-white">
            Nachricht an das Team
          </button>
        </div>
      </aside>

      <!-- Hauptinhalt -->
      <section class="flex-1 p-8">
        <div id="loader" class="flex items-center justify-center h-64 text-xl font-semibold text-gray-700">
          Anmeldung wird geprüft…
        </div>

        <div id="dashboard-content" class="hidden space-y-6">
          <CustomerCard client:load />
          <!-- <ImpressumCard client:load /> -->
        </div>
      </section>
    </main>

    <footer class="text-center text-gray-500 text-sm py-6">
      © 2025 SmartPages · Hosted in Europe · DSGVO-konform
    </footer>
  </body>
</html>
