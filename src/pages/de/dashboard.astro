---
import PageLayout from "~/layouts/PageLayout.astro";
import "~/styles/global.css";

let user = {
  name: "Gastbenutzer",
  email: "unbekannt",
  status: "Kostenlos",
  plan: "â€”",
  activeUntil: "â€”",
  lastLogin: "â€”",
};
let authenticated = false;

// ðŸ§© Serverseitiger Session-Fallback (prÃ¼ft Cookies im Request)
try {
  const cookie = Astro.request.headers.get("cookie") || "";
  if (cookie.includes("session=")) {
    const res = await fetch("https://api.smartpages.online/api/session", {
      method: "GET",
      headers: {
        "Accept": "application/json",
        "Cookie": cookie,
      },
      credentials: "include",
    });

    const data = await res.json();
    if (data.ok && data.authenticated) {
      authenticated = true;
      user = {
        name: data.user?.first_name || "Benutzer",
        email: data.user?.email || "unbekannt",
        status: "Business",
        plan: "Testversion (7 Tage)",
        activeUntil: "15.01.2026",
        lastLogin: new Date().toLocaleString("de-DE"),
      };
    }
  }
} catch (err) {
  console.warn("Server-side session check failed:", err);
}
