import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import ProductCardGrid from "~/components/core/ProductCardGrid.astro";
import CustomerCard from "~/components/core/CustomerCard";
import ImprintCard from "~/components/core/ImprintCard";

const isChecking = true; // Platzhalter f√ºr Tokenpr√ºfung
---

<PageLayout title="SmartPages Dashboard" lang="de">
  <div class="relative flex flex-col gap-8 w-full max-w-6xl mx-auto">

    <!-- üîπ Popup (zentriert √ºber CustomerCard) -->
