---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true}>
  <main
    class="flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >
    <!-- ðŸ§­ OBERER BEREICH: Kundendaten + Systemnachricht -->
    <section
      class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start transition-all duration-300"
    >
      <!-- ðŸªª Kundendaten -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- ðŸ’¬ Systemnachricht -->
      <div
        class="system-message flex justify-center xl:justify-end transition-all duration-300"
      >
        <SystemMessage />
      </div>
    </section>

    <!-- ðŸ¢ IMPRESSUM -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- ðŸ’¼ PRODUKTGRID -->
    <DashboardCardWide>
      <ProductGrid />
    </DashboardCardWide>
  </main>

  <!-- âš™ï¸ Modal-Trigger Script -->
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      const customerBtn = document.querySelector(
        'button:has-text("Profil bearbeiten")'
      );
      const imprintBtn = document.querySelector(
        'button:has-text("Impressum bearbeiten")'
      );

      customerBtn?.addEventListener("click", () => {
        window.dispatchEvent(new CustomEvent("open-customer-modal"));
      });

      imprintBtn?.addEventListener("click", () => {
        window.dispatchEvent(new CustomEvent("open-imprint-modal"));
      });
    });
  </script>
</PageLayout>

<style>
  /* ===============================
     ðŸŽ¯ PREMIUM DASHBOARD LAYOUT FIX
     =============================== */
  @media (min-width: 1280px) {
    .dashboard-top {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }
    .dashboard-top .system-message {
      justify-content: flex-end;
    }
  }

  @media (min-width: 768px) and (max-width: 1279px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }
    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
      display: flex;
    }
  }

  @media (max-width: 767px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      align-items: center;
    }
    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
    }
  }

  main {
    padding-top: 0.5rem;
    transition: all 0.3s ease-in-out;
  }
</style>
