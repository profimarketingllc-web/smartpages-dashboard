---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/core/CustomerCard.jsx";
import ImprintCard from "~/components/core/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true}>
  <main
    class="flex flex-col gap-10 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- üß≠ OBERER BEREICH: Kundendaten + SystemMessage -->
    <section
      class="grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start"
    >
      <!-- ü™™ Kundendaten -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- üí¨ Systemnachricht -->
      <div class="system-message flex justify-center xl:justify-end transition-all duration-300">
        <SystemMessage />
      </div>
    </section>

    <!-- üè¢ IMPRESSUM -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- üíº PRODUKTGRID -->
    <DashboardCardWide>
      <ProductGrid />
    </DashboardCardWide>

  </main>
</PageLayout>

<style>
  /* ===============================
     üéØ PREMIUM DASHBOARD LAYOUT
     =============================== */

  /* üß© Oberer Bereich ab XL zweispaltig */
  @media (min-width: 1280px) {
    section:first-of-type {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }
  }

  /* üì± Mobile Ansicht (1 Spalte) */
  @media (max-width: 1279px) {
    section:first-of-type {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    /* üí¨ SystemMessage mittig auf kleinen Screens */
    section:first-of-type > .system-message {
      order: 2;
      display: flex;
      justify-content: center !important;
      text-align: center;
    }
  }

  /* üßò‚Äç‚ôÇÔ∏è Harmonisches Spacing zum Header */
  main {
    padding-top: 0.5rem;
  }

  /* ü™Ñ Dezenter √úbergang bei Gr√∂√üen√§nderung */
  section,
  main {
    transition: all 0.3s ease-in-out;
  }
</style>
