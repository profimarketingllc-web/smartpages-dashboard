    if (data.ok && data.authenticated) {
      authenticated = true;
      user = {
        name: data.user?.first_name || "Benutzer",
        email: data.user?.email || "unbekannt",
        status: data.user?.status || "active",
        plan: data.user?.plan || "Trial",
        aktivBis: data.user?.trial_end || "â€”",
        letztesLogin: data.user?.last_login || "â€”",
      };
    }
  }
} catch (err) {
