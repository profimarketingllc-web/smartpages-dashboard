        class="rounded-2xl p-5 text-white bg-gradient-to-r from-[#F5B400] to-[#E47E00]
                shadow-[0_6px_16px_rgba(0,0,0,0.12)] transition-all duration-300
                hover:shadow-[0_0_25px_rgba(245,180,0,0.6)] hover:scale-[1.02]"
