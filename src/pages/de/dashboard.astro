---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
import EditCustomerModal from "~/components/solid/EditCustomerModal.jsx";
import EditImprintModal from "~/components/solid/EditImprintModal.jsx";
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true}>
  <main
    class="dashboard-wrapper flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- ðŸ§­ TOP SECTION: Customer Data + System Message -->
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start transition-all duration-300">
      <!-- ðŸªª Customer Data -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- ðŸ’¬ System Message -->
      <div class="system-message">
        <SystemMessage />
      </div>
    </section>

    <!-- ðŸ¢ IMPRINT -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- ðŸ’¼ PRODUCT GRID (no DashboardCard wrapper) -->
    <section class="mt-4 md:mt-6">
      <ProductGrid />
    </section>

    <!-- ðŸ§© Modals -->
    <EditCustomerModal client:load />
    <EditImprintModal client:load />
  </main>
</PageLayout>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    console.log("âœ… English Dashboard scripts active (signal-based + MutationObserver)");

    const attachButtonListeners = () => {
      let found = false;

      const customerBtn = document.querySelector("button[data-signal='open-customer-modal']");
      if (customerBtn && !customerBtn.dataset.bound) {
        customerBtn.dataset.bound = "true";
        found = true;
        customerBtn.addEventListener("click", () => {
          console.log("ðŸŸ¢ Opening Customer Modal");
          window.dispatchEvent(new CustomEvent("open-customer-modal"));
        });
      }

      const imprintBtn = document.querySelector("button[data-signal='open-imprint-modal']");
      if (imprintBtn && !imprintBtn.dataset.bound) {
        imprintBtn.dataset.bound = "true";
        found = true;
        imprintBtn.addEventListener("click", () => {
          console.log("ðŸŸ¢ Opening Imprint Modal");
          window.dispatchEvent(new CustomEvent("open-imprint-modal"));
        });
      }

      if (!found) {
        console.warn("âš ï¸ Waiting for Solid hydration â€“ no buttons found yetâ€¦");
      }
    };

    attachButtonListeners();

    const observer = new MutationObserver(() => attachButtonListeners());
    observer.observe(document.body, { childList: true, subtree: true });

    setTimeout(() => {
      observer.disconnect();
      console.log("ðŸ§¹ MutationObserver disabled (after 10s)");
    }, 10000);

    setTimeout(attachButtonListeners, 1000);
    setTimeout(attachButtonListeners, 3000);
  });
</script>

<style>
  /* ===============================
     ðŸ§© Layout Core
     =============================== */
  .dashboard-top {
    align-items: flex-start;
  }

  /* ðŸ’¬ SystemMessage responsive + bÃ¼ndig rechts */
  .system-message {
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    width: 100%;
    margin-top: 0.25rem;
  }

  @media (min-width: 1280px) {
    .system-message {
      justify-content: flex-end;
      padding-right: 0.75rem; /* bÃ¼ndig mit Cards */
    }
  }

  @media (max-width: 1279px) {
    .system-message {
      justify-content: center;
      text-align: center;
      width: 100%;
      margin-top: 1rem;
    }
  }

  @media (max-width: 767px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      align-items: center;
    }
    .system-message {
      justify-content: center;
      text-align: center;
      width: 100%;
      margin-top: 1rem;
    }
  }

  main {
    padding-top: 0.5rem;
    transition: all 0.3s ease-in-out;
  }
</style>
