---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true}>
  <main
    class="flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- ğŸ§­ OBERER BEREICH: Kundendaten + SystemMessage -->
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start transition-all duration-300">
      <!-- ğŸªª Kundendaten -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- ğŸ’¬ Systemnachricht -->
      <div class="system-message flex justify-center xl:justify-end transition-all duration-300">
        <SystemMessage />
      </div>
    </section>

    <!-- ğŸ¢ IMPRESSUM -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- ğŸ’¼ PRODUKTGRID -->
    <DashboardCardWide>
      <ProductGrid />
    </DashboardCardWide>

  </main>
</PageLayout>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    console.log("âœ… Dashboard scripts loaded");

    // ğŸ”¹ Buttons in den Solid-Komponenten finden
    const customerBtn = document.querySelector("button[data-action='edit-customer']");
    const imprintBtn = document.querySelector("button[data-action='edit-imprint']");

    // ğŸ”¹ Klick-Event fÃ¼r Customer Modal
    if (customerBtn) {
      customerBtn.addEventListener("click", () => {
        console.log("ğŸŸ¢ Ã–ffne Customer Modal");
        window.dispatchEvent(new CustomEvent("open-customer-modal"));
      });
    } else {
      console.warn("âš ï¸ Kein Button [data-action='edit-customer'] gefunden!");
    }

    // ğŸ”¹ Klick-Event fÃ¼r Imprint Modal
    if (imprintBtn) {
      imprintBtn.addEventListener("click", () => {
        console.log("ğŸŸ¢ Ã–ffne Imprint Modal");
        window.dispatchEvent(new CustomEvent("open-imprint-modal"));
      });
    } else {
      console.warn("âš ï¸ Kein Button [data-action='edit-imprint'] gefunden!");
    }
  });
</script>

<style>
  /* ===============================
     ğŸ¯ PREMIUM DASHBOARD LAYOUT FIX
     =============================== */

  /* ğŸ§© Desktop-Layout (ab XL) â†’ 2 Spalten */
  @media (min-width: 1280px) {
    .dashboard-top {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }

    .dashboard-top .system-message {
      justify-content: flex-end;
    }
  }

  /* ğŸ’» Mittlere Screens (z. B. 900â€“1279px) â†’ zentriert */
  @media (min-width: 768px) and (max-width: 1279px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }

    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
      display: flex;
    }
  }

  /* ğŸ“± Kleine Screens (unter 768px) â†’ 1 Spalte, zentriert */
  @media (max-width: 767px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      align-items: center;
    }

    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
    }
  }

  /* ğŸ¨ Allgemeines Spacing */
  main {
    padding-top: 0.5rem;
    transition: all 0.3s ease-in-out;
  }
</style>
