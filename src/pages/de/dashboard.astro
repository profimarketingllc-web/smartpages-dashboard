---
import SmartHeader from "@/components/core/SmartHeader.astro";
import SmartSidebar from "@/components/core/SmartSidebar.astro";
import DashboardCardWide from "@/components/core/DashboardCardWide.astro";
import ProductCardGrid from "@/components/core/ProductCardGrid.astro";

// Solid-Komponente (übernimmt komplette obere Kachel)
import CustomerCard from "@/components/core/CustomerCard.jsx";
---

<html lang="de">
  <body class="bg-[#f9fafb] text-gray-900 font-sans">
    <!-- Header -->
    <SmartHeader />

    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <SmartSidebar />

      <!-- Hauptbereich -->
      <main class="flex-1 p-8 space-y-8 overflow-x-hidden">
        <!-- SolidJS-Komponente (komplette Kachel) -->
        <CustomerCard client:load />

        <!-- Impressumsdaten -->
        <DashboardCardWide>
          <h2 class="text-lg font-semibold text-gray-800 mb-2">
            Impressumsdaten
          </h2>
          <div class="grid grid-cols-2 gap-x-6 text-sm">
            <div>
              <p><span class="font-medium">Unternehmen:</span> –</p>
              <p><span class="font-medium">Adresse:</span> –</p>
              <p><span class="font-medium">Land:</span> Deutschland</p>
            </div>
            <div>
              <p><span class="font-medium">Ansprechpartner:</span> –</p>
              <p><span class="font-medium">PLZ / Ort:</span> –</p>
              <p><span class="font-medium">E-Mail (Support):</span> unbekannt</p>
              <p><span class="font-medium">USt-ID:</span> –</p>
            </div>
          </div>
          <div class="mt-4 text-right">
            <button
              class="px-5 py-2 rounded-xl bg-gradient-to-r from-yellow-500 to-orange-600 text-white font-medium shadow hover:opacity-90 transition"
            >
              Impressum bearbeiten
            </button>
          </div>
        </DashboardCardWide>

        <!-- Produkt-Upsell -->
        <DashboardCardWide>
          <ProductCardGrid />
        </DashboardCardWide>

        <!-- Feedback -->
        <DashboardCardWide>
          <div class="flex flex-col items-center text-center space-y-4 py-6">
            <p class="text-gray-700 text-sm">
              Hast du Feedback oder Fragen? Unser Team hilft dir gerne weiter.
            </p>
            <button
              class="px-6 py-2 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-medium shadow hover:opacity-90 transition"
            >
              Nachricht an das Team
            </button>
          </div>
        </DashboardCardWide>
      </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-xs text-gray-500 py-6 border-t mt-10">
      © 2025 SmartPages · Hosted in Europe · GDPR-compliant
    </footer>
  </body>
</html>
