---
import DashboardCard from "~/components/core/DashboardCard.astro";
import CustomerCard from "~/components/solid/CustomerCard";
import ImprintCard from "~/components/solid/ImprintCard";
import SystemMessage from "~/components/core/SystemMessage.astro";

// Optional: Astro-spezifische Karten, wenn du sie schon angelegt hast
import AstroCardOne from "~/components/astro/AstroCardOne.astro";
import AstroCardTwo from "~/components/astro/AstroCardTwo.astro";
---

<!-- ============================================= -->
<!-- ðŸ”¹ Dashboard Layout -->
<!-- ============================================= -->
<main class="w-full flex flex-col gap-10 transition-all duration-300">

  <!-- ðŸ§­ OBERER BEREICH: Kundendaten + Systemnachricht -->
  <section
    class="grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start"
  >
    <!-- Kundendaten -->
    <DashboardCard>
      <CustomerCard />
    </DashboardCard>

    <!-- Hinweis / System Message -->
    <div class="flex justify-center xl:justify-end">
      <SystemMessage />
    </div>
  </section>

  <!-- ============================================= -->
  <!-- ðŸ”¹ UNTERER BEREICH: Impressum & Astro-Karten -->
  <!-- ============================================= -->
  <section class="mt-2 flex flex-col gap-10">
    <!-- Impressum -->
    <DashboardCard>
      <ImprintCard />
    </DashboardCard>

    <!-- Astro-Karten (falls vorhanden) -->
    <DashboardCard>
      <AstroCardOne />
    </DashboardCard>

    <DashboardCard>
      <AstroCardTwo />
    </DashboardCard>
  </section>

</main>

<!-- ============================================= -->
<!-- ðŸ”§ Styling-Anpassungen -->
<!-- ============================================= -->
<style>
  main {
    max-width: 1600px;
    margin: 0 auto;
    padding-top: 0.5rem; /* Reduziert WeiÃŸraum unter Header */
  }

  section {
    transition: all 0.3s ease;
  }

  /* Oberer Bereich: 2-Spalten-Layout bei groÃŸen Bildschirmen */
  @media (min-width: 1280px) {
    section:first-of-type {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }
  }

  /* Mobile: alles 1-spaltig */
  @media (max-width: 1279px) {
    section:first-of-type {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    /* Message unterhalb der CustomerCard auf mobilen Screens */
    section:first-of-type > div {
      order: 2;
      display: flex;
      justify-content: center;
    }
  }

  /* Allgemeine Harmonisierung */
  .dashboard-card {
    transition: all 0.2s ease-in-out;
  }
</style>
