---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/core/CustomerCard.jsx";
import ImprintCard from "~/components/core/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true}>
  <main class="flex flex-col gap-10 max-w-6xl mx-auto px-6 mt-6 mb-20">

    <!-- üß≠ OBERER BEREICH: Kundendaten + SystemMessage -->
    <section class="grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start">
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <div class="flex justify-center xl:justify-end">
        <SystemMessage />
      </div>
    </section>

    <!-- üè¢ IMPRESSUM -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- üíº PRODUKTGRID -->
    <DashboardCardWide>
      <ProductGrid />
    </DashboardCardWide>

  </main>
</PageLayout>

<style>
  /* Oberer Bereich zweispaltig ab XL */
  @media (min-width: 1280px) {
    section:first-of-type {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }
  }

  /* Mobile Ansicht (1 Spalte) */
  @media (max-width: 1279px) {
    section:first-of-type {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    section:first-of-type > div {
      order: 2;
      display: flex;
      justify-content: center;
    }
  }

  main {
    padding-top: 0.5rem; /* Wei√üraum reduziert */
  }
</style>
