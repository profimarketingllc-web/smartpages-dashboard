---
import SmartHeader from "@/components/core/SmartHeader.astro";
import SmartSidebar from "@/components/core/SmartSidebar.astro";
import DashboardCardWide from "@/components/core/DashboardCardWide.astro";
import ProductCardGrid from "@/components/core/ProductCardGrid.astro";
import CustomerCard from "@/components/core/CustomerCard.jsx";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <title>SmartPages Dashboard</title>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
    <!-- Header -->
    <SmartHeader />

    <!-- Hauptlayout -->
    <div class="flex flex-1 overflow-hidden">
      <!-- Sidebar -->
      <SmartSidebar />

      <!-- Content -->
      <main class="flex-1 flex flex-col px-8 py-6 space-y-8 overflow-y-auto bg-gray-50">
        <!-- 1️⃣ CustomerCard mit SolidJS -->
        <DashboardCardWide>
          <CustomerCard client:load />
        </DashboardCardWide>

        <!-- 2️⃣ ProductGrid (statisch) -->
        <DashboardCardWide>
          <ProductCardGrid />
        </DashboardCardWide>

        <!-- 3️⃣ Feedback-Karte -->
        <DashboardCardWide>
          <div class="text-center py-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">
              Dein Feedback hilft uns weiter
            </h3>
            <p class="text-gray-600 mb-4">
              Teile Fehler, Ideen oder Vorschläge – damit wir SmartPages stetig verbessern können.
            </p>
            <a
              href="mailto:support@smartpages.online"
              class="px-5 py-2 rounded-xl bg-red-500 text-white font-medium shadow hover:bg-red-600 transition"
            >
              Feedback senden
            </a>
          </div>
        </DashboardCardWide>
      </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-50 text-gray-500 text-center py-4 text-sm border-t border-gray-200 mt-auto">
      © 2026 SmartPages · Hosted in Europe · DSGVO-konform
    </footer>
  </body>
</html>
