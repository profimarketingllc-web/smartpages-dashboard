---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import SmartCard from "../../../components/SmartCard.astro";
---

<DashboardLayout>
  <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <SmartCard
      title="SmartProfile"
      description="Erstelle Dein persönliches Profil mit nur wenigen Klicks – perfekt für Freelancer, Coaches und Unternehmer."
      colorFrom="#4E6BFF"
      colorTo="#657AFF"
      link="/dashboard/smartprofile"
    />
    <SmartCard
      title="SmartPage"
      description="Baue beeindruckende Seiten mit wenigen Klicks. Einfach, schnell und professionell gestaltet."
      colorFrom="#F5B400"
      colorTo="#E47E00"
      link="/dashboard/smartpage"
    />
    <SmartCard
      title="SmartDomain"
      description="Sichere Deine eigene Domain direkt in SmartPages – professionell, einfach und DSGVO-konform."
      colorFrom="#8B5CFF"
      colorTo="#A076FF"
      link="/dashboard/smartdomain"
    />
  </section>
</DashboardLayout>
