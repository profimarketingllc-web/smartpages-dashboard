            showPopup("‚è≥ Magic-Link wird gesendet...", "warning");

            try {
              const res = await fetch(API_URL, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
                mode: "cors",
              });
              const result = await res.json();

              if (result.ok)
                showPopup(
                  "‚úÖ Magic-Link gesendet! Bitte pr√ºfe Dein Postfach.",
                  "success"
                );
              else
                showPopup(
