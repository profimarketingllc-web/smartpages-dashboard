---
import PageLayout from "~/layouts/PageLayout.astro";
import Card from "@/components/ui/Card.astro";
import ProductForm from "@/components/editor/ProductForm.astro";
import ProductPreview from "@/components/editor/ProductPreview.astro";

// Beispiel-Schema f√ºr Domain-Eingabe
const schema = [
  { key: "domain_name", label: "Domainname", type: "text" },
  { key: "redirect_url", label: "Ziel-URL", type: "text" },
  { key: "plan", label: "Paket / Plan", type: "text" },
  { key: "status", label: "Status", type: "text" },
];

// Beispiel-Daten f√ºr Vorschau (Dummy)
const domain = {
  domain_name: "www.meine-domain.online",
  redirect_url: "https://example.com",
  plan: "Business",
  status: "aktiv",
  slug: "meine-domain",
};
---

<PageLayout title="SmartDomain ‚Äì SmartPages" sidebar={true} header={true}>
  <!-- üü™ Produkt-Pill -->
  <div class="max-w-4xl mx-auto mt-6">
    <div class="text-center">
      <span
        class="inline-block px-6 py-2 rounded-full text-white text-lg font-semibold
               bg-gradient-to-r from-[#8B5CFF] to-[#A076FF]
               shadow-[0_4px_12px_rgba(139,92,255,0.25)]"
      >
        SmartDomain
      </span>
    </div>
  </div>

  <!-- üß± Produktbereich -->
  <div class="max-w-4xl mx-auto mt-10 space-y-8">
    <!-- Eingabeformular -->
    <Card title="Domain bearbeiten">
      <ProductForm schema={schema} data={domain} />
    </Card>

    <!-- Vorschau -->
    <Card title="Vorschau">
      <ProductPreview slug={domain.slug} />
    </Card>
  </div>
</PageLayout>
