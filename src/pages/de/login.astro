---
import "~/styles/global.css";
import ProductCardGrid from "~/components/core/ProductCardGrid.astro";

const products = [
  {
    title: "SmartProfile",
    label: "BALD VERF√úGBAR",
    text: "Dein pers√∂nliches Online-Profil, das deine Markenidentit√§t widerspiegelt ‚Äî sicher in Europa gehostet, optimiert f√ºr Sichtbarkeit, Glaubw√ºrdigkeit und vollst√§ndige DSGVO-Konformit√§t auf allen digitalen Kan√§len.",
    gradient: "from-[#3D4CFF] to-[#6A5FFF]",
  },
  {
    title: "SmartPage",
    label: "BALD VERF√úGBAR",
    text: "Erstelle beeindruckende, konversionsstarke Seiten in wenigen Minuten ‚Äî ganz ohne Programmierung. Entwickelt f√ºr Kreative, Unternehmer und kleine Teams, die elegantes Design und volle Kontrolle wollen, ohne Komplexit√§t.",
    gradient: "from-[#F5B400] to-[#E47E00]",
  },
  {
    title: "SmartDomain",
    label: "BALD VERF√úGBAR",
    text: "Sichere deine eigene Domain, sch√ºtze deine Marke und bleibe von Anfang an DSGVO-konform. SmartDomain macht das Verwalten deiner Online-Identit√§t m√ºhelos ‚Äî datenschutzorientiert, sicher und in Europa gehostet.",
    gradient: "from-[#9D3DFF] to-[#6A3AFF]",
  },
];
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Login</title>
    <meta
      name="description"
      content="Anmeldung bei SmartPages ‚Äî sicher, datenschutzkonform und in Europa gehostet."
    />
  </head>

  <body class="bg-white text-gray-800 font-inter pt-24 md:pt-28">
    <!-- Header -->
    <header
      class="bg-[#1E2A45] text-white py-5 px-4 flex flex-col md:flex-row items-center justify-center gap-4 shadow-lg fixed top-0 left-0 right-0 z-50"
    >
      <img
        src="/SmartPages_icon_transparent.png"
        alt="SmartPages Logo"
        class="w-20 h-20"
        loading="lazy"
      />
      <div class="text-center md:text-left">
        <h1 class="text-3xl font-extrabold">SmartPages</h1>
        <p class="text-sm md:text-base opacity-90">
          In nur 10 Minuten online ‚Äî datenschutzkonform und in Europa gehostet.
        </p>
      </div>
    </header>

    <!-- Hero + Login -->
    <section
      class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 px-6 mt-8 md:mt-10 mb-8 md:mb-10"
    >
      <!-- Left (Hero) -->
      <div class="bg-white shadow-xl p-8 rounded-2xl border border-gray-100">
        <h2 class="text-3xl font-extrabold text-[#F5B400] mb-6">
          Willkommen bei SmartPages
        </h2>

        <p class="mb-4">
          Mit <strong>SmartPages</strong> erstellst du deine professionelle Online-Pr√§senz in nur
          <strong>10 Minuten</strong> ‚Äì ohne technisches Wissen oder komplizierte Einrichtung.
          Alles wird sicher in <strong>Europa</strong> gehostet und ist vollst√§ndig
          <strong>DSGVO-konform</strong>.
        </p>

        <p class="mb-4">
          Wenn sich dein Publikum oder deine Kunden in der EU befinden, ist Datenschutz keine Option,
          sondern Pflicht. SmartPages erf√ºllt diese Anforderungen automatisch ‚Äì vom ersten Klick an.
        </p>

        <p>
          Gib unten einfach deine Kontaktdaten ein, und wir senden dir einen pers√∂nlichen
          <strong>Magic Link</strong> f√ºr den sicheren Sofortzugang zu deinem SmartPages-Dashboard ‚Äì 
          ohne Passwort, ohne Tracking, ohne Datensammlung.
        </p>
      </div>

      <!-- Right (Login Form) -->
      <div class="bg-[#f6f8fb] shadow-xl p-8 rounded-2xl border border-gray-100">
        <form id="magicForm" class="bg-white p-6 rounded-xl flex flex-col gap-4 shadow-sm">
          <div>
            <label class="block text-sm text-gray-600 mb-1">Vorname *</label>
            <input type="text" name="first_name" required class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]" />
          </div>

          <div>
            <label class="block text-sm text-gray-600 mb-1">Nachname</label>
            <input type="text" name="last_name" class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]" />
          </div>

          <div>
            <label class="block text-sm text-gray-600 mb-1">E-Mail *</label>
            <input type="email" name="email" required class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]" />
          </div>

          <div class="flex items-center gap-2">
            <input type="checkbox" id="is_business" name="is_business" />
            <label for="is_business" class="text-sm text-gray-600">Gesch√§ftskonto</label>
          </div>

          <div id="company_field" class="hidden">
            <label class="block text-sm text-gray-600 mb-1">Unternehmen</label>
            <input type="text" name="company_name" class="w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]" />
          </div>

          <button id="submitBtn" type="submit"
            class="bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white font-bold py-3 px-4 rounded-lg shadow-lg hover:shadow-[0_0_20px_4px_rgba(245,180,0,0.6)] hover:scale-[1.04] transition-all duration-300 ease-in-out disabled:opacity-60 disabled:cursor-not-allowed">
            Magic Link senden
          </button>
        </form>
      </div>
    </section>

    <!-- Product Cards -->
    <section class="mt-6 mb-12 px-4">
      <ProductCardGrid {products} />
    </section>

    <!-- Footer -->
    <footer class="text-center text-sm text-gray-600 py-6 bg-[#f5f5f5]">
      ¬© 2025 SmartPages ¬∑ Profi Marketing LLC ¬∑ Gehostet in Europa ¬∑ DSGVO-konform
    </footer>

    <!-- Popup -->
    <div id="popup" class="hidden fixed z-50 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"></div>

    <script>
      const API_URL = "https://api.smartpages.online/auth/start";
      const popup = document.getElementById("popup");
      const form = document.getElementById("magicForm");
      const submitBtn = document.getElementById("submitBtn");

      function showPopup(message, type = "success") {
        popup.innerHTML = message;
        popup.className =
          "fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 px-6 py-5 rounded-lg shadow-xl text-center text-base font-semibold z-50 bg-white border-l-8 " +
          (type === "success"
            ? "border-green-500 text-green-700"
            : type === "warning"
            ? "border-yellow-400 text-yellow-700"
            : "border-red-500 text-red-700");
        popup.classList.remove("hidden");
        setTimeout(() => popup.classList.add("hidden"), 7000);
      }

      form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const data = {
          first_name: form.first_name.value.trim(),
          last_name: form.last_name.value.trim(),
          email: form.email.value.trim(),
          company_name: form.company_name?.value.trim() || "",
          is_business: form.is_business.checked,
        };

        submitBtn.disabled = true;
        showPopup("‚è≥ Sende deinen Magic Link...<br><span class='text-sm opacity-80'>Einen Moment bitte.</span>", "warning");

        try {
          const res = await fetch(API_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
            mode: "cors",
          });
          const result = await res.json();

          if (result.ok) {
            showPopup("‚úÖ Magic Link gesendet! Bitte √ºberpr√ºfe dein Postfach.", "success");
          } else {
            switch (result.error) {
              case "invalid_email":
                showPopup("‚ùå Bitte gib eine g√ºltige E-Mail-Adresse ein.", "error");
                break;
              case "email_bounced":
                showPopup("‚ö†Ô∏è Deine E-Mail konnte zuletzt nicht erreicht werden. Bitte pr√ºfe deine Adresse.", "error");
                break;
              case "trial_expired":
                showPopup("üí° Dein kostenloser Testzeitraum ist abgelaufen. Bitte pr√ºfe deine E-Mails f√ºr Upgrade-Optionen.", "warning");
                break;
              case "rate_limited":
                showPopup("‚è≥ Bitte warte einen Moment, bevor du erneut einen Magic Link anforderst.", "warning");
                break;
              case "mailer_unreachable":
                showPopup("üì≠ Der Mailserver ist aktuell nicht erreichbar. Bitte versuche es sp√§ter erneut.", "error");
                break;
              case "mailer_error":
                showPopup("‚ùå Beim Versand der E-Mail ist ein Fehler aufgetreten. Bitte erneut versuchen.", "error");
                break;
              default:
                showPopup("‚ö†Ô∏è Ein unbekannter Fehler ist aufgetreten. Bitte √ºberpr√ºfe deine Eingaben.", "error");
            }
          }
        } catch {
          showPopup("‚ö†Ô∏è Netzwerkfehler. Bitte √ºberpr√ºfe deine Internetverbindung.", "error");
        } finally {
          submitBtn.disabled = false;
        }
      });

      document.addEventListener("DOMContentLoaded", () => {
        const cb = document.getElementById("is_business");
        const field = document.getElementById("company_field");
        cb?.addEventListener("change", () => {
          field.classList.toggle("hidden", !cb.checked);
        });
      });
    </script>
  </body>
</html>
