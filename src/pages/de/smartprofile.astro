---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductPill from "@/components/shared/ProductPill.astro";
import Card from "@/components/ui/Card.astro";
import ProductForm from "@/components/editor/ProductForm.astro";
import ProductPreview from "@/components/editor/ProductPreview.astro";

const schema = [
  { key: "name", label: "Name", type: "text" },
  { key: "bio", label: "Kurzbeschreibung", type: "textarea", rows: 5 },
  { key: "link_1", label: "Erster Link", type: "text" },
  { key: "link_2", label: "Zweiter Link", type: "text" },
  { key: "link_3", label: "Dritter Link (optional)", type: "text" },
];

const profile = {
  name: "Max Mustermann",
  bio: "Freelancer & Coach. Ich helfe Menschen, ihre Online-Präsenz zu stärken.",
  link_1: "https://linkedin.com/in/max",
  link_2: "https://instagram.com/max",
  link_3: "",
  slug: "max-mustermann",
};
---

<PageLayout title="SmartProfile – SmartPages" sidebar={true} header={true}>
  <ProductPill label="SmartProfile" color="blue" />

  <div class="max-w-4xl mx-auto mt-10 space-y-8">
    <Card title="Profil bearbeiten">
      <ProductForm schema={schema} data={profile} />
    </Card>
    <Card title="Vorschau">
      <ProductPreview slug={profile.slug} />
    </Card>
  </div>
</PageLayout>

