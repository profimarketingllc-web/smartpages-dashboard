---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductPill from "@/components/core/ProductPill.astro";
import Card from "@/components/ui/Card.astro";
import ProductForm from "@/components/editor/ProductForm.astro";
import ProductPreview from "@/components/editor/ProductPreview.astro";

const schema = [
  { key: "name", label: "Your Name", type: "text" },
  { key: "bio", label: "Bio / About You", type: "textarea", rows: 5 },
  { key: "link_1", label: "First Link", type: "text" },
  { key: "link_2", label: "Second Link", type: "text" },
  { key: "link_3", label: "Third Link (optional)", type: "text" },
];

const profile = {
  name: "John Doe",
  bio: "Freelancer & Creator. Helping small businesses grow online.",
  link_1: "https://linkedin.com/in/john",
  link_2: "https://twitter.com/johndoe",
  link_3: "",
  slug: "john-doe",
};
---

<PageLayout title="SmartProfile â€“ SmartPages" sidebar={true} header={true}>
  <ProductPill label="SmartProfile" color="blue" />

  <div class="max-w-4xl mx-auto mt-10 space-y-8">
    <Card title="Edit Profile">
      <ProductForm schema={schema} data={profile} />
    </Card>
    <Card title="Preview">
      <ProductPreview slug={profile.slug} />
    </Card>
  </div>
</PageLayout>
