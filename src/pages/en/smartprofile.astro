---
import PageLayout from "~/layouts/PageLayout.astro";
import Card from "@/components/ui/Card.astro";
import ProductForm from "@/components/editor/ProductForm.astro";
import ProductPreview from "@/components/editor/ProductPreview.astro";

const schema = [
  { key: "name", label: "Your Name", type: "text" },
  { key: "bio", label: "Bio / About You", type: "textarea", rows: 5 },
  { key: "link_1", label: "First Link", type: "text" },
  { key: "link_2", label: "Second Link", type: "text" },
  { key: "link_3", label: "Third Link (optional)", type: "text" },
];

const profile = {
  name: "John Doe",
  bio: "Freelancer & Creator. I help small businesses grow their online presence.",
  link_1: "https://www.linkedin.com/in/john",
  link_2: "https://twitter.com/johndoe",
  link_3: "",
  slug: "john-doe",
};
---

<PageLayout title="SmartProfile â€“ SmartPages" sidebar={true} header={true}>
  <!-- ðŸŸ¦ Product Pill -->
  <div class="max-w-4xl mx-auto mt-6 text-center">
    <span
      class="inline-block px-6 py-2 rounded-full text-white text-lg font-semibold
             bg-gradient-to-r from-[#4E6BFF] to-[#657AFF]
             shadow-[0_4px_12px_rgba(78,107,255,0.25)]"
    >
      SmartProfile
    </span>
  </div>

  <div class="max-w-4xl mx-auto mt-10 space-y-8">
    <Card title="Edit your profile">
      <ProductForm schema={schema} data={profile} />
    </Card>

    <Card title="Preview">
      <ProductPreview slug={profile.slug} />
    </Card>
  </div>
</PageLayout>
