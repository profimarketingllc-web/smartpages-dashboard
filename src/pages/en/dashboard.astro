---
import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
import EditCustomerModal from "~/components/solid/EditCustomerModal.jsx";
import EditImprintModal from "~/components/solid/EditImprintModal.jsx";
---

<PageLayout title="Dashboard ‚Äì SmartPages" sidebar={true} header={true}>
  <main
    class="flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- üß≠ TOP SECTION: Customer Data + SystemMessage -->
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start transition-all duration-300">
      <!-- ü™™ Customer Data -->
      <DashboardCardWide>
        <CustomerCard client:load />
      </DashboardCardWide>

      <!-- üí¨ System Message -->
      <div class="system-message flex justify-center xl:justify-end transition-all duration-300">
        <SystemMessage />
      </div>
    </section>

    <!-- üè¢ IMPRINT -->
    <DashboardCardWide>
      <ImprintCard client:load />
    </DashboardCardWide>

    <!-- üíº PRODUCT GRID -->
    <DashboardCardWide>
      <ProductGrid />
    </DashboardCardWide>

    <!-- üß© Modals (werden per Signal ge√∂ffnet) -->
    <EditCustomerModal client:load />
    <EditImprintModal client:load />

  </main>
</PageLayout>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    console.log("‚úÖ English Dashboard scripts active (signal-based)");

    const attachButtonListeners = () => {
      // Customer Modal
      const customerBtn = document.querySelector("button[data-signal='open-customer-modal']");
      if (customerBtn && !customerBtn.dataset.bound) {
        customerBtn.dataset.bound = "true";
        customerBtn.addEventListener("click", () => {
          console.log("üü¢ Opening Customer Modal");
          window.dispatchEvent(new CustomEvent("open-customer-modal"));
        });
      } else if (!customerBtn) {
        console.warn("‚ö†Ô∏è No button with data-signal='open-customer-modal' found.");
      }

      // Imprint Modal
      const imprintBtn = document.querySelector("button[data-signal='open-imprint-modal']");
      if (imprintBtn && !imprintBtn.dataset.bound) {
        imprintBtn.dataset.bound = "true";
        imprintBtn.addEventListener("click", () => {
          console.log("üü¢ Opening Imprint Modal");
          window.dispatchEvent(new CustomEvent("open-imprint-modal"));
        });
      } else if (!imprintBtn) {
        console.warn("‚ö†Ô∏è No button with data-signal='open-imprint-modal' found.");
      }
    };

    // Initial call
    attachButtonListeners();

    // Fallback for delayed Solid hydration
    setTimeout(attachButtonListeners, 1000);
    setTimeout(attachButtonListeners, 3000);
  });
</script>

<style>
  /* ===============================
     üéØ PREMIUM DASHBOARD LAYOUT FIX
     =============================== */

  @media (min-width: 1280px) {
    .dashboard-top {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
      align-items: start;
    }
    .dashboard-top .system-message {
      justify-content: flex-end;
    }
  }

  @media (min-width: 768px) and (max-width: 1279px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }
    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
      display: flex;
    }
  }

  @media (max-width: 767px) {
    .dashboard-top {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      align-items: center;
    }
    .dashboard-top .system-message {
      order: 2;
      justify-content: center !important;
      text-align: center;
      width: 100%;
    }
  }

  main {
    padding-top: 0.5rem;
    transition: all 0.3s ease-in-out;
  }
</style>
