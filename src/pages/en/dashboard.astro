---
import PageLayout from "~/layouts/PageLayout.astro";
import "~/styles/global.css";

let user = {
  name: "Guest User",
  email: "unknown",
  status: "Free",
  plan: "â€”",
  activeUntil: "â€”",
  lastLogin: "â€”",
};
let authenticated = false;

// ðŸ§© Server-side session check
try {
  const cookie = Astro.request.headers.get("cookie") || "";
  if (cookie.includes("session=")) {
    const res = await fetch("https://api.smartpages.online/api/session", {
      method: "GET",
      headers: {
        "Accept": "application/json",
        "Cookie": cookie,
      },
      credentials: "include",
    });

    const data = await res.json();
    if (data.ok && data.authenticated) {
      authenticated = true;
      user = {
        name: data.user?.first_name || "User",
        email: data.user?.email || "unknown",
        status: "Business",
        plan: "Trial (7 days)",
        activeUntil: "Jan 15, 2026",
        lastLogin: new Date().toLocaleString("en-GB"),
      };
    }
  }
} catch (err) {
  console.warn("Server-side session check failed:", err);
}
