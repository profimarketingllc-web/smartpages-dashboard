---
export const prerender = false;

import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/core/DashboardCardWide.astro";
import CustomerCard from "~/components/solid/CustomerCard.jsx";
import ImprintCard from "~/components/solid/ImprintCard.jsx";
import PrivacyCard from "~/components/solid/PrivacyCard.jsx";
import ProductGrid from "~/components/core/ProductGrid.astro";
import SystemMessage from "~/components/core/SystemMessage.astro";
import EditCustomerModal from "~/components/solid/EditCustomerModal.jsx";
import EditImprintModal from "~/components/solid/EditImprintModal.jsx";
import EditPrivacyModal from "~/components/solid/EditPrivacyModal.jsx";

// üß© SSR Session Check (via Cookie)
const cookie = Astro.request.headers.get("cookie") || "";
if (!cookie.includes("session=")) {
  // No active session ‚Üí redirect to English login
  return Astro.redirect("/en/login");
}

// üîπ Get user object from middleware (set by Core Worker)
const user = Astro.locals?.user || null;
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true} lang="en">
  <main
    class="dashboard-wrapper flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >

    <!-- üß≠ TOP SECTION -->
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start">
      <DashboardCardWide>
        <!-- ‚úÖ Customer data is loaded via CustomerCard (SolidJS) -->
        <CustomerCard client:only="solid-js" lang="en" />
      </DashboardCardWide>

      <div class="system-message">
        <!-- ‚úÖ System message (personalized by locals.user) -->
        <SystemMessage lang="en" user={user} />
      </div>
    </section>

    <!-- üè¢ IMPRINT SECTION -->
    <DashboardCardWide>
      <ImprintCard client:only="solid-js" lang="en" />
    </DashboardCardWide>

    <!-- üîí PRIVACY SECTION -->
    <DashboardCardWide>
      <PrivacyCard client:only="solid-js" lang="en" />
    </DashboardCardWide>

    <!-- üíº PRODUCT GRID -->
    <section class="mt-4 md:mt-6">
      <ProductGrid lang="en" />
    </section>

    <!-- üß© MODALS -->
    <EditCustomerModal client:only="solid-js" lang="en" />
    <EditImprintModal client:only="solid-js" lang="en" />
    <EditPrivacyModal client:only="solid-js" lang="en" />
  </main>
</PageLayout>

<!-- üîß Client-side Session Validation -->
<script>
  window.addEventListener("DOMContentLoaded", async () => {
    console.log("üá¨üáß Dashboard loaded ‚Äî checking active session...");

    try {
      const res = await fetch("https://api.smartpages.online/api/session/userinfo", {
        credentials: "include",
      });
      const data = await res.json();

      if (!data.ok || !data.user) {
        console.warn("‚ö†Ô∏è No valid session ‚Äî redirecting to login page...");
        window.location.href = "/en/login";
        return;
      }

      console.log("‚úÖ Active session for:", data.user.email);
    } catch (e) {
      console.error("‚ùå Error checking session:", e);
      window.location.href = "/en/login";
    }
  });
</script>
