---
export const prerender = false;

import PageLayout from "~/layouts/PageLayout.astro";
import DashboardCardWide from "~/components/shared/DashboardCardWide.astro";
import CustomerCard from "~/components/pages/dashboard/solid/CustomerCard.jsx";
import ImprintCard from "~/components/pages/dashboard/solid/ImprintCard.jsx";
import PrivacyCard from "~/components/pages/dashboard/solid/PrivacyCard.jsx";
import ProductGrid from "~/components/pages/shared/ProductGrid.astro";
import SystemMessage from "~/components/pages/dashboard/astro/SystemMessage.astro";
import EditCustomerModal from "~/components/pages/dashboard/solid/EditCustomerModal.jsx";
import EditImprintModal from "~/components/pages/dashboard/solid/EditImprintModal.jsx";
import EditPrivacyModal from "~/components/pages/dashboard/solid/EditPrivacyModal.jsx";

const cookie = Astro.request.headers.get("cookie") || "";
if (!cookie.includes("session=")) {
  return Astro.redirect("/en/login");
}

const user = Astro.locals?.user || null;
---

<PageLayout title="SmartPages Dashboard" sidebar={true} header={true} lang="en">
  <main
    class="dashboard-wrapper flex flex-col gap-8 max-w-6xl mx-auto px-4 sm:px-6 mt-4 md:mt-6 mb-16 md:mb-20 transition-all duration-300"
  >
    <section class="dashboard-top grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-6 items-start">
      <DashboardCardWide>
        <CustomerCard client:only="solid-js" lang="en" />
      </DashboardCardWide>

      <div class="system-message">
        <SystemMessage lang="en" user={user} />
      </div>
    </section>

    <DashboardCardWide>
      <ImprintCard client:only="solid-js" lang="en" />
    </DashboardCardWide>

    <DashboardCardWide>
      <PrivacyCard client:only="solid-js" lang="en" />
    </DashboardCardWide>

    <section class="mt-4 md:mt-6">
      <ProductGrid lang="en" />
    </section>

    <EditCustomerModal client:only="solid-js" lang="en" />
    <EditImprintModal client:only="solid-js" lang="en" />
    <EditPrivacyModal client:only="solid-js" lang="en" />
  </main>
</PageLayout>

<script>
  window.addEventListener("DOMContentLoaded", async () => {
    console.log("üá¨üáß Dashboard loaded ‚Äî checking session...");

    if (window.__SESSION_CHECK_DONE__) {
      console.log("‚öôÔ∏è Session check already done, skipping duplicate call.");
      return;
    }
    window.__SESSION_CHECK_DONE__ = true;

    if (window.__SESSION_INFO__) {
      console.log("‚úÖ Using cached session:", window.__SESSION_INFO__);
      window.dispatchEvent(
        new CustomEvent("session-info-ready", { detail: window.__SESSION_INFO__ })
      );
      return;
    }

    try {
      const res = await fetch("https://api.smartpages.online/api/session/userinfo", {
        credentials: "include",
      });
      const data = await res.json();

      if (!data.ok || !data.user) {
        console.warn("‚ö†Ô∏è No valid session found ‚Äì redirecting to login");
        window.location.href = "/en/login";
        return;
      }

      console.log("‚úÖ Active session for:", data.user.email);
      window.__SESSION_INFO__ = data.user;

      window.dispatchEvent(
        new CustomEvent("session-info-ready", { detail: data.user })
      );
    } catch (e) {
      console.error("‚ùå Error while checking session:", e);
      window.location.href = "/en/login";
    }
  });
</script>
