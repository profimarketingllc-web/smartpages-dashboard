---
import PageLayout from "~/layouts/PageLayout.astro";
import "~/styles/global.css";

let user = {
  name: "Guest User",
  email: "unknown",
  status: "Free",
  plan: "â€”",
  activeUntil: "â€”",
  lastLogin: "â€”",
};
let authenticated = false;

// ðŸ§© Server-side session check
try {
  const cookie = Astro.request.headers.get("cookie") || "";
  if (cookie.includes("session=")) {
    const res = await fetch("https://api.smartpages.online/api/session", {
      method: "GET",
      headers: {
        "Accept": "application/json",
        "Cookie": cookie,
      },
      credentials: "include",
    });

    const data = await res.json();
    if (data.ok && data.authenticated) {
      authenticated = true;
      user = {
        name: data.user?.first_name || "User",
        email: data.user?.email || "unknown",
        status: "Business",
        plan: "Trial (7 days)",
        activeUntil: "Jan 15, 2026",
        lastLogin: new Date().toLocaleString("en-GB"),
      };
    }
  }
} catch (err) {
  console.warn("Server-side session check failed:", err);
}
---

<PageLayout title="Dashboard â€“ SmartPages" sidebar={true} header={true}>
  <div id="dashboard-wrapper" class={authenticated ? "" : "hidden"}>

    <!-- ðŸ§­ User data -->
    <section class="max-w-6xl mx-auto bg-gray-50 border border-gray-200 shadow-lg rounded-3xl p-8 mt-2">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
        <div class="w-full">
          <h2 class="text-2xl font-bold mb-4">Welcome back, {user.name} ðŸ‘‹</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-x-12 gap-y-2 text-sm text-gray-700">
            <p><span class="font-semibold">Name:</span> {user.name}</p>
            <p><span class="font-semibold">Email:</span> {user.email}</p>
            <p><span class="font-semibold">Status:</span> {user.status}</p>
            <p><span class="font-semibold">Plan:</span> {user.plan}</p>
            <p><span class="font-semibold">Active until:</span> {user.activeUntil}</p>
            <p><span class="font-semibold">Last login:</span> {user.lastLogin}</p>
          </div>

          <div class="flex justify-center mt-4">
            <button
              id="editUserBtn"
              class="px-6 py-2 text-white rounded-xl shadow-md font-medium 
                     bg-gradient-to-r from-[#F5B400] to-[#E47E00]
                     hover:opacity-90 transition-all duration-300"
            >
              Edit user data
            </button>
          </div>
        </div>

        <div class="mt-4 md:mt-0 md:ml-6">
          <span
            class="inline-block px-4 py-1.5 text-sm rounded-full border 
                   bg-[#C8F3C1] text-[#1E2A45] border-[#B1E6AA]
                   font-medium min-w-[110px] text-center"
          >
            Logged in
          </span>
        </div>
      </div>
    </section>

    <!-- ðŸ§¾ Imprint Information -->
    <section class="max-w-6xl mx-auto bg-gray-50 border border-gray-200 shadow-lg rounded-3xl p-8 mt-6">
      <h2 class="text-xl font-semibold mb-4 text-[#1E2A45]">Imprint Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-3 text-sm text-gray-700">
        <p><span class="font-semibold">Company Name:</span> {user.company || "â€“"}</p>
        <p><span class="font-semibold">Contact Person:</span> {user.contact_name || "â€“"}</p>
        <p><span class="font-semibold">Address:</span> {user.address || "â€“"}</p>
        <p><span class="font-semibold">ZIP / City:</span> {user.zip || "â€“"} {user.city || ""}</p>
        <p><span class="font-semibold">Country:</span> {user.country || "Germany"}</p>
        <p><span class="font-semibold">Support Email:</span> {user.support_email || user.email}</p>
        <p><span class="font-semibold">Phone:</span> {user.phone || "â€“"}</p>
        <p><span class="font-semibold">VAT-ID:</span> {user.vat_id || "â€“"}</p>
      </div>

      <div class="flex justify-center mt-6">
        <button
          id="editImprintBtn"
          class="px-6 py-2 text-white rounded-xl shadow-md font-medium 
                 bg-gradient-to-r from-[#F5B400] to-[#E47E00]
                 hover:opacity-90 transition-all duration-300"
        >
          Edit Imprint
        </button>
      </div>
    </section>

    <!-- Modal (hidden by default) -->
    <div id="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden justify-center items-center z-50">
      <div class="bg-white rounded-2xl shadow-lg p-8 w-[90%] max-w-lg">
        <h3 id="modalTitle" class="text-xl font-semibold mb-4 text-[#1E2A45]">Edit Data</h3>
        <form id="modalForm" class="space-y-4">
          <input type="text" placeholder="Name" class="w-full border border-gray-300 rounded-lg px-3 py-2" />
          <input type="email" placeholder="Email" class="w-full border border-gray-300 rounded-lg px-3 py-2" />
        </form>
        <div class="flex justify-end mt-6 gap-3">
          <button id="cancelModal"
            class="px-4 py-2 bg-gray-200 text-[#1E2A45] rounded-lg hover:bg-gray-300">Cancel</button>
          <button id="saveModal"
            class="px-4 py-2 text-white rounded-lg bg-gradient-to-r from-[#F5B400] to-[#E47E00] hover:opacity-90">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- ðŸ• Fallback display -->
  <div id="login-status" class={authenticated ? "hidden" : "max-w-4xl mx-auto mt-20 text-center"}>
    <h2 class="text-2xl font-bold text-[#1E2A45]">Checking your login...</h2>
  </div>
</PageLayout>

<script>
window.addEventListener("DOMContentLoaded", async () => {
  try {
    const res = await fetch("https://api.smartpages.online/api/session", {
      method: "GET",
      credentials: "include",
      headers: { "Accept": "application/json" },
    });
    const data = await res.json();

    if (data.ok && data.authenticated) {
      document.getElementById("login-status")?.classList.add("hidden");
      document.getElementById("dashboard-wrapper")?.classList.remove("hidden");
      console.log("âœ… User authenticated, dashboard visible.");
    }

    // Modal logic
    const modal = document.getElementById("modal");
    const openUser = document.getElementById("editUserBtn");
    const openImprint = document.getElementById("editImprintBtn");
    const cancelModal = document.getElementById("cancelModal");

    openUser?.addEventListener("click", () => {
      modal.classList.remove("hidden");
      document.getElementById("modalTitle").innerText = "Edit User Data";
    });

    openImprint?.addEventListener("click", () => {
      modal.classList.remove("hidden");
      document.getElementById("modalTitle").innerText = "Edit Imprint";
    });

    cancelModal?.addEventListener("click", () => {
      modal.classList.add("hidden");
    });
  } catch (e) {
    console.error("Session fetch failed:", e);
  }
});
</script>

<style>
section {
  scroll-margin-top: 2rem;
}
section h2 {
  line-height: 1.2;
}
section p {
  line-height: 1.4;
}
.grid p {
  margin-bottom: 0.25rem;
}
section.max-w-6xl {
  margin-top: 1.25rem !important;
  padding-top: 1.75rem;
  padding-bottom: 1.75rem;
}
</style>
