---
import "~/styles/global.css";
import ProductGrid from "~/components/core/ProductGrid.astro";

const products = [
  {
    title: "SmartProfile",
    label: "COMING SOON",
    text: "Your personal online profile that reflects your brand identity ‚Äî securely hosted in Europe, optimized for visibility, credibility, and full GDPR compliance across all digital channels.",
    gradient: "from-[#3D4CFF] to-[#6A5FFF]",
    glow: "hover:shadow-[0_0_30px_#3D4CFF80]",
  },
  {
    title: "SmartPage",
    label: "COMING SOON",
    text: "Create stunning, high-converting pages in minutes ‚Äî no coding required. Designed for creators, entrepreneurs, and small teams who want elegant design and full control without complexity.",
    gradient: "from-[#F5B400] to-[#E47E00]",
    glow: "hover:shadow-[0_0_30px_#F5B40080]",
  },
  {
    title: "SmartDomain",
    label: "COMING SOON",
    text: "Secure your own domain, protect your brand, and stay GDPR-compliant from day one. SmartDomain makes managing your online identity effortless ‚Äî privacy-focused, secure, and EU-hosted.",
    gradient: "from-[#9D3DFF] to-[#6A3AFF]",
    glow: "hover:shadow-[0_0_30px_#9D3DFF80]",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Login</title>
    <meta
      name="description"
      content="Login to SmartPages ‚Äî secure, GDPR-compliant, and hosted in Europe."
    />
  </head>

  <body class="bg-white text-gray-800 font-inter pt-24 md:pt-28 overflow-x-hidden">
    <!-- üß≠ Centered Header -->
    <header
      class="bg-[#1E2A45] text-white py-5 flex justify-center items-center shadow-lg fixed top-0 left-0 right-0 z-50"
    >
      <div class="flex items-center gap-5">
        <img
          src="/SmartPages_icon_transparent.png"
          alt="SmartPages Logo"
          class="w-16 h-16"
        />
        <div>
          <h1 class="text-3xl font-extrabold">SmartPages</h1>
          <p class="text-sm md:text-base opacity-90">
            Go online in just 10&nbsp;minutes ‚Äî no tech skills needed.
          </p>
        </div>
      </div>
    </header>

    <!-- üí° Main Section ‚Äì compact, above-the-fold -->
    <section
      class="w-full max-w-[1350px] mx-auto grid grid-cols-1 md:grid-cols-2 gap-5 px-6 lg:px-10 mt-12 items-start min-h-[68vh]"
    >
      <!-- Left Info Box -->
      <div class="bg-white shadow-lg p-6 rounded-2xl border border-gray-100">
        <h2 class="text-2xl font-extrabold text-[#F5B400] mb-4">
          Welcome to SmartPages
        </h2>
        <p class="mb-3">
          With <strong>SmartPages</strong>, you can build your professional online presence in just
          <strong>10 minutes</strong> ‚Äî without technical knowledge or complicated setup. Everything
          is securely hosted in <strong>Europe</strong> and fully <strong>GDPR compliant</strong>.
        </p>
        <p class="mb-3">
          If your audience or clients are in the EU, data protection isn‚Äôt optional ‚Äî it‚Äôs required.
          SmartPages ensures compliance from the very first click.
        </p>
        <p>
          Simply enter your contact details below, and we‚Äôll send you a personal
          <strong>Magic Link</strong> for instant, secure access to your SmartPages dashboard ‚Äî
          no password, no tracking, no data collection.
        </p>
      </div>

      <!-- Right Login Box -->
      <div class="bg-[#f6f8fb] shadow-lg p-6 rounded-2xl border border-gray-100">
        <form id="magicForm" class="bg-white p-5 rounded-xl flex flex-col gap-3 shadow-sm">
          <label class="block text-sm text-gray-600 mb-1">First name *</label>
          <input
            type="text"
            name="first_name"
            required
            class="border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]"
          />

          <label class="block text-sm text-gray-600 mb-1">Last name</label>
          <input
            type="text"
            name="last_name"
            class="border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]"
          />

          <label class="block text-sm text-gray-600 mb-1">Email *</label>
          <input
            type="email"
            name="email"
            required
            class="border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]"
          />

          <div class="flex items-center gap-2">
            <input type="checkbox" id="is_business" name="is_business" />
            <label for="is_business" class="text-sm text-gray-600">Business account</label>
          </div>

          <div id="company_field" class="hidden">
            <label class="block text-sm text-gray-600 mb-1">Company</label>
            <input
              type="text"
              name="company_name"
              class="border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-[#F5B400]"
            />
          </div>

          <button
            id="submitBtn"
            type="submit"
            class="mt-2 bg-gradient-to-r from-[#F5B400] to-[#E47E00] text-white font-bold py-3 px-4 rounded-lg shadow hover:shadow-[0_0_12px_2px_rgba(245,180,0,0.5)] hover:scale-[1.03] transition-all duration-300"
          >
            Send Magic Link
          </button>
        </form>
      </div>
    </section>

    <!-- üß± ProductGrid ‚Äì same width & spacing -->
    <section class="mt-4 mb-6 px-6 lg:px-10">
      <div class="w-full max-w-[1350px] mx-auto">
        <ProductGrid {products} compact />
      </div>
    </section>

    <!-- Footer -->
    <footer class="text-center text-sm text-gray-600 py-3 bg-[#f5f5f5]">
      ¬© 2025 SmartPages ¬∑ Profi Marketing LLC ¬∑ Hosted in Europe ¬∑ GDPR-compliant
    </footer>

    <!-- Popup -->
    <div
      id="popup"
      class="hidden fixed z-50 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
    ></div>

    <script>
      const API_URL = "https://api.smartpages.online/api/auth/start";
      const popup = document.getElementById("popup");
      const form = document.getElementById("magicForm");
      const submitBtn = document.getElementById("submitBtn");

      function showPopup(message, type = "success") {
        popup.innerHTML = message;
        popup.className =
          "fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 px-6 py-4 rounded-lg shadow-xl text-center text-base font-semibold z-50 bg-white border-l-8 " +
          (type === "success"
            ? "border-green-500 text-green-700"
            : type === "warning"
            ? "border-yellow-400 text-yellow-700"
            : "border-red-500 text-red-700");
        popup.classList.remove("hidden");
        setTimeout(() => popup.classList.add("hidden"), 7000);
      }

      form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const data = {
          first_name: form.first_name.value.trim(),
          last_name: form.last_name.value.trim(),
          email: form.email.value.trim(),
          company_name: form.company_name?.value.trim() || "",
          is_business: form.is_business.checked,
        };

        submitBtn.disabled = true;
        showPopup("‚è≥ Sending your Magic Link...<br><span class='text-sm opacity-80'>Please wait a moment.</span>", "warning");

        try {
          const res = await fetch(API_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });
          const result = await res.json();
          if (result.ok) {
            showPopup("‚úÖ Magic Link sent! Please check your inbox.", "success");
          } else {
            showPopup("‚ö†Ô∏è Something went wrong. Please check your details.", "error");
          }
        } catch {
          showPopup("‚ö†Ô∏è Network error. Please check your internet connection.", "error");
        } finally {
          submitBtn.disabled = false;
        }
      });

      document.addEventListener("DOMContentLoaded", () => {
        const cb = document.getElementById("is_business");
        const field = document.getElementById("company_field");
        cb?.addEventListener("change", () => field.classList.toggle("hidden", !cb.checked));
      });
    </script>
  </body>
</html>
