---
const { lang = "de" } = Astro.params || {};

const texts = {
  de: {
    title: "Zahlung abgebrochen ❌",
    message: "Deine Zahlung wurde nicht abgeschlossen. Du kannst den Vorgang jederzeit erneut starten.",
    button: "Zurück zur Upgrade-Seite",
  },
  en: {
    title: "Payment Canceled ❌",
    message: "Your payment was not completed. You can restart the process at any time.",
    button: "Back to Upgrade Page",
  },
};

const t = texts[lang] || texts.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t.title} – SmartPages</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        background: #0b0d17;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }
      .card {
        background: #1a1d29;
        border-radius: 16px;
        padding: 2rem 3rem;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        max-width: 480px;
      }
      img {
        width: 72px;
        margin-bottom: 1rem;
      }
      h1 {
        margin-bottom: 0.5rem;
      }
      p {
        margin-bottom: 1.5rem;
      }
      a.button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        background: linear-gradient(90deg, #4676ff, #5a8bff);
        color: white;
        text-decoration: none;
        transition: opacity 0.2s ease-in-out;
      }
      a.button:hover {
        opacity: 0.8;
      }
    </style>
  </head>

  <body>
    <div class="card">
      <img src="/assets/SmartPages_icon_transparent.png" alt="SmartPages Logo" />
      <h1>{t.title}</h1>
      <p>{t.message}</p>
      <a href={`/${lang}/checkout/upgrade`} class="button">{t.button}</a>
    </div>
  </body>
</html>
