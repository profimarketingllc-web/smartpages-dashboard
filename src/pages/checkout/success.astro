---
const { lang = "de" } = Astro.params || {};

const texts = {
  de: {
    title: "Upgrade erfolgreich ðŸŽ‰",
    message: "Vielen Dank fÃ¼r dein Upgrade! Deine Premium-Funktionen sind jetzt aktiv.",
    button: "Zum Dashboard",
  },
  en: {
    title: "Upgrade Successful ðŸŽ‰",
    message: "Thank you for upgrading! Your premium features are now active.",
    button: "Go to Dashboard",
  },
};

const t = texts[lang] || texts.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t.title} â€“ SmartPages</title>
    <style>
      :root {
        --bg-dark: #0b0d17;
        --card-bg: #131722;
        --accent: #4676ff;
        --accent-light: #5a8bff;
      }

      body {
        font-family: 'Inter', system-ui, sans-serif;
        background: radial-gradient(circle at 30% 30%, #111626, #0b0d17);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }

      .card {
        background: var(--card-bg);
        border-radius: 20px;
        padding: 3rem 4rem;
        text-align: center;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6),
                    inset 0 0 15px rgba(255, 255, 255, 0.05);
        max-width: 440px;
        animation: fadeIn 0.5s ease-in-out;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      img {
        width: 90px;
        margin-bottom: 1.2rem;
        filter: drop-shadow(0 4px 8px rgba(70, 118, 255, 0.4));
      }

      h1 {
        font-size: 1.6rem;
        margin-bottom: 0.5rem;
      }

      p {
        color: #ccc;
        margin-bottom: 2rem;
      }

      a.button {
        display: inline-block;
        padding: 0.75rem 1.75rem;
        border-radius: 10px;
        background: linear-gradient(90deg, var(--accent), var(--accent-light));
        color: white;
        font-weight: 500;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(70, 118, 255, 0.4);
        transition: all 0.25s ease-in-out;
      }

      a.button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(70, 118, 255, 0.5);
      }
    </style>
  </head>

  <body>
    <div class="card">
      <img src="/assets/SmartPages_icon_transparent.png" alt="SmartPages Logo" />
      <h1>{t.title}</h1>
      <p>{t.message}</p>
      <a href={`/${lang}/dashboard`} class="button">{t.button}</a>
    </div>
  </body>
</html>
