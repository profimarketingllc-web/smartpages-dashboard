---
const { lang = "de" } = Astro.params || {};
const messages = {
  de: {
    title: "Anmeldung wird √ºberpr√ºft...",
    success: "Willkommen zur√ºck!",
    error: "Fehler bei der Anmeldung.",
    waiting: "Bitte warten...",
  },
  en: {
    title: "Checking your login...",
    success: "Welcome back!",
    error: "Login error.",
    waiting: "Please wait...",
  },
};
const t = messages[lang] || messages.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{t.title} | SmartPages</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background-color: #0b0d17;
        color: white;
        font-family: "Inter", system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        text-align: center;
      }
      img {
        width: 90px;
        margin-bottom: 1.5rem;
        animation: pulse 1.5s infinite alternate;
      }
      @keyframes pulse {
        from { opacity: 0.6; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1.05); }
      }
      .status {
        margin-top: 1rem;
        font-size: 1rem;
        opacity: 0.8;
      }
    </style>
  </head>

  <body>
    <!-- üü¢ Logo wird jetzt direkt angezeigt -->
    <img src="/SmartPages_icon_transparent.png" alt="SmartPages Logo" loading="eager" />
    <h2 id="statusText">{t.title}</h2>
    <p class="status" id="subText">{t.waiting}</p>

    <script is:inline>
      (async () => {
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");
        const lang = url.searchParams.get("lang") || "de";
        const statusEl = document.getElementById("statusText");
        const subEl = document.getElementById("subText");

        if (!token) {
          statusEl.textContent = "‚ùå Kein Token gefunden.";
          subEl.textContent = "";
          return;
        }

        try {
          // Schnell: Parallel pr√ºfen und vorladen
          const verifyUrl = `https://api.smartpages.online/api/auth/verify?token=${token}&lang=${lang}`;
          const verifyRes = await fetch(verifyUrl);
          const verifyData = await verifyRes.json();

          if (!verifyData.ok || !verifyData.redirect) {
            statusEl.textContent = "‚ö†Ô∏è Token ung√ºltig oder abgelaufen.";
            subEl.textContent = "";
            return;
          }

          // ‚úÖ Sofortiger Redirect-Start ‚Äì Logo bleibt sichtbar
          subEl.textContent = "Wird verbunden...";
          window.history.replaceState(null, "", verifyUrl); // saubere URL im Verlauf

          // Session setzen, aber im Hintergrund
          fetch(`https://api.smartpages.online${verifyData.redirect}`, { credentials: "include" })
            .then(async (confirmRes) => {
              const confirmData = await confirmRes.json();
              if (confirmData.ok && confirmData.redirect) {
                statusEl.textContent = t.success;
                subEl.textContent = "";
                setTimeout(() => (window.location.href = confirmData.redirect), 800);
              } else {
                statusEl.textContent = t.error;
                subEl.textContent = "";
              }
            })
            .catch((err) => {
              statusEl.textContent = "‚ùå Fehler: " + err.message;
              subEl.textContent = "";
            });
        } catch (err) {
          statusEl.textContent = "‚ùå Fehler: " + err.message;
          subEl.textContent = "";
        }
      })();
    </script>
  </body>
</html>
