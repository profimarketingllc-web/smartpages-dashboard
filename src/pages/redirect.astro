---
const { lang = "de" } = Astro.params || {};
const messages = {
  de: {
    title: "Anmeldung wird überprüft...",
    success: "Willkommen zurück!",
    error: "Fehler bei der Anmeldung.",
  },
  en: {
    title: "Checking your login...",
    success: "Welcome back!",
    error: "Login error.",
  },
};
const t = messages[lang] || messages.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{t.title} | SmartPages</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background-color: #0b0d17;
        color: white;
        font-family: "Inter", system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        text-align: center;
      }
      img {
        width: 90px;
        margin-bottom: 1.5rem;
        animation: pulse 1.5s infinite alternate;
      }
      @keyframes pulse {
        from { opacity: 0.6; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1.05); }
      }
      .status {
        margin-top: 1rem;
        font-size: 1rem;
        opacity: 0.8;
      }
    </style>
  </head>

  <body>
    <img src="/assets/SmartPages_icon_transparent.png" alt="SmartPages Logo" />
    <h2 id="statusText">{t.title}</h2>
    <p class="status">Bitte warten...</p>

    <script is:inline>
      (async () => {
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");
        const lang = url.searchParams.get("lang") || "de";
        const statusEl = document.getElementById("statusText");

        if (!token) {
          statusEl.textContent = "❌ Kein Token gefunden.";
          return;
        }

        try {
          const verifyRes = await fetch(
            `https://api.smartpages.online/api/auth/verify?token=${token}&lang=${lang}`
          );
          const verifyData = await verifyRes.json();
          if (!verifyData.ok || !verifyData.redirect) {
            statusEl.textContent = "⚠️ Token ungültig oder abgelaufen.";
            return;
          }

          const confirmRes = await fetch(
            `https://api.smartpages.online${verifyData.redirect}`,
            { credentials: "include" }
          );
          const confirmData = await confirmRes.json();

          if (confirmData.ok && confirmData.redirect) {
            statusEl.textContent = "{t.success}";
            setTimeout(() => {
              window.location.href = confirmData.redirect;
            }, 1200);
          } else {
            statusEl.textContent = "{t.error}";
          }
        } catch (err) {
          statusEl.textContent = "❌ Fehler: " + err.message;
        }
      })();
    </script>
  </body>
</html>
