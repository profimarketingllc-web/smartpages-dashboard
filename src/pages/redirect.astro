---
/**
 * üîÅ SmartPages Redirect Page (v2.1)
 * ---------------------------------
 * - Ablauf: Verify ‚Üí Confirm ‚Üí Redirect
 * - Vermeidet doppelte /confirm-Aufrufe
 * - Setzt Cookie zuverl√§ssig durch echten Browser-Redirect
 * - Zeigt klare Statusmeldungen im Fehlerfall
 */
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>SmartPages Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background-color: #0b0d17;
        color: #ffffff;
        font-family: system-ui, sans-serif;
        text-align: center;
        margin-top: 20vh;
      }
      .spinner {
        margin: 3rem auto;
        border: 5px solid #444;
        border-top: 5px solid #f5b400;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 0.9s linear infinite;
      }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
    </style>
  </head>

  <body>
    <h2>üîê Anmeldung wird √ºberpr√ºft...</h2>
    <div class="spinner"></div>

    <script is:inline>
      (async () => {
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");
        const lang = url.searchParams.get("lang") || "de";

        const showMessage = (text, emoji = "‚ö†Ô∏è") => {
          document.body.innerHTML = `
            <h2>${emoji} ${text}</h2>
            <p style="opacity:0.8;">Bitte fordere ggf. einen neuen Login-Link an.</p>
          `;
        };

        if (!token) {
          showMessage("Kein Token gefunden.");
          return;
        }

        try {
          // 1Ô∏è‚É£ Token verifizieren
          const verifyRes = await fetch(
            \`https://api.smartpages.online/api/auth/verify?token=\${token}&lang=\${lang}\`
          );
          const verifyData = await verifyRes.json();

          if (!verifyData.ok || !verifyData.redirect) {
            showMessage("Ung√ºltiger oder abgelaufener Login-Link.");
            return;
          }

          // 2Ô∏è‚É£ Confirm direkt als echte Browser-Navigation ausf√ºhren
          // ‚ö†Ô∏è Kein fetch() mehr! Das sorgt daf√ºr, dass der Cookie akzeptiert wird.
          window.location.href = \`https://api.smartpages.online\${verifyData.redirect}\`;

        } catch (err) {
          console.error("Login-Redirect-Fehler:", err);
          showMessage("Fehler bei der Anmeldung: " + err.message);
        }
      })();
    </script>
  </body>
</html>
