---
const { lang = "de" } = Astro.params || {};

const messages = {
  de: {
    title: "Anmeldung wird √ºberpr√ºft...",
    success: "Willkommen zur√ºck!",
    error: "Fehler bei der Anmeldung.",
    waiting: "Bitte warten...",
    connecting: "Wird verbunden...",
    notFound: "‚ùå Kein Token gefunden.",
    invalid: "‚ö†Ô∏è Token ung√ºltig oder abgelaufen.",
  },
  en: {
    title: "Checking your login...",
    success: "Welcome back!",
    error: "Login error.",
    waiting: "Please wait...",
    connecting: "Connecting...",
    notFound: "‚ùå No token found.",
    invalid: "‚ö†Ô∏è Invalid or expired token.",
  },
};

const t = messages[lang] || messages.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{t.title} | SmartPages</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background-color: #0b0d17;
        color: white;
        font-family: "Inter", system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        text-align: center;
        transition: opacity 0.4s ease;
      }

      img {
        width: 96px;
        margin-bottom: 1.8rem;
        animation: pulse 1.6s infinite alternate;
        filter: drop-shadow(0 0 10px rgba(245, 180, 0, 0.25));
      }

      @keyframes pulse {
        from {
          opacity: 0.7;
          transform: scale(0.94);
        }
        to {
          opacity: 1;
          transform: scale(1.04);
        }
      }

      h2 {
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 0.4rem;
      }

      .status {
        margin-top: 0.5rem;
        font-size: 1rem;
        opacity: 0.8;
        transition: opacity 0.3s;
      }

      .fade-out {
        opacity: 0;
      }
    </style>
  </head>

  <body>
    <!-- üü¢ Logo aus /public -->
    <img
      src="/SmartPages_icon_transparent.png"
      alt="SmartPages Logo"
      width="96"
      height="96"
      loading="eager"
      decoding="async"
    />
    <h2 id="statusText">{t.title}</h2>
    <p class="status" id="subText">{t.waiting}</p>

    <script is:inline>
      (async () => {
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");
        const lang = url.searchParams.get("lang") || "de";
        const statusEl = document.getElementById("statusText");
        const subEl = document.getElementById("subText");

        if (!token) {
          statusEl.textContent = t.notFound;
          subEl.textContent = "";
          return;
        }

        try {
          const verifyUrl = `https://api.smartpages.online/api/auth/verify?token=${token}&lang=${lang}`;
          const verifyRes = await fetch(verifyUrl);
          const verifyData = await verifyRes.json();

          if (!verifyData.ok || !verifyData.redirect) {
            statusEl.textContent = t.invalid;
            subEl.textContent = "";
            return;
          }

          // Zeige Verbindungsstatus
          subEl.textContent = t.connecting;

          // Session erstellen im Hintergrund
          fetch(`https://api.smartpages.online${verifyData.redirect}`, {
            credentials: "include",
          })
            .then(async (confirmRes) => {
              const confirmData = await confirmRes.json();

              if (confirmData.ok && confirmData.redirect) {
                statusEl.textContent = t.success;
                subEl.classList.add("fade-out");
                setTimeout(() => {
                  document.body.classList.add("fade-out");
                  window.location.href = confirmData.redirect;
                }, 700);
              } else {
                statusEl.textContent = t.error;
                subEl.textContent = "";
              }
            })
            .catch((err) => {
              statusEl.textContent = "‚ùå Fehler: " + err.message;
              subEl.textContent = "";
            });
        } catch (err) {
          statusEl.textContent = "‚ùå Fehler: " + err.message;
          subEl.textContent = "";
        }
      })();
    </script>
  </body>
</html>
