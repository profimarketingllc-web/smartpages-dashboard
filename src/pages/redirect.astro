    <script is:inline>
      (async () => {
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");
        const lang = url.searchParams.get("lang") || "de";

        const message = (txt) => {
          document.body.innerHTML =
            `<p style="font-family:sans-serif;text-align:center;margin-top:20vh;">${txt}</p>`;
        };

        if (!token) return message("âŒ Kein Token gefunden.");

        try {
          // 1ï¸âƒ£ Verify-Request (mit Credentials!)
          const verifyRes = await fetch(
            `https://api.smartpages.online/api/auth/verify?token=${token}&lang=${lang}`,
            { credentials: "include" }
          );
          const verifyData = await verifyRes.json();
          if (!verifyData.ok || !verifyData.redirect)
            return message("âš ï¸ Token ungÃ¼ltig oder abgelaufen.");

          // 2ï¸âƒ£ Confirm-Request (setzt Session-Cookie)
          const confirmRes = await fetch(
            `https://api.smartpages.online${verifyData.redirect}`,
            { credentials: "include" }
          );
          const confirmData = await confirmRes.json();

          if (confirmData.ok && confirmData.redirect) {
            // 3ï¸âƒ£ Kurzer Delay, damit das Session-Cookie sicher geschrieben ist
            await new Promise((res) => setTimeout(res, 300));

            // 4ï¸âƒ£ Redirect ins Dashboard
            window.location.href = confirmData.redirect;
          } else {
            message("âš ï¸ Fehler beim BestÃ¤tigen der Anmeldung.");
          }
        } catch (err) {
          message(`âŒ Fehler: ${err.message}`);
        }
      })();
    </script>
