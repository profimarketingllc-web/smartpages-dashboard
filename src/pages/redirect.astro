---
const url = new URL(Astro.request.url);

let lang: "de" | "en" = "de";
if (url.pathname.startsWith("/en/") || url.searchParams.get("lang") === "en") {
  lang = "en";
}

const messages = {
  de: {
    title: "Anmeldung wird überprüft...",
    success: "Willkommen zurück!",
    error: "Fehler bei der Anmeldung.",
    waiting: "Bitte warten...",
    connecting: "Wird verbunden...",
    notFound: "❌ Kein Token gefunden.",
    invalid: "⚠️ Token ungültig oder abgelaufen.",
  },
  en: {
    title: "Checking your login...",
    success: "Welcome back!",
    error: "Login error.",
    waiting: "Please wait...",
    connecting: "Connecting...",
    notFound: "❌ No token found.",
    invalid: "⚠️ Invalid or expired token.",
  },
};

const t = messages[lang] || messages.de;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{t.title} | SmartPages</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background: radial-gradient(circle at 50% 50%, #10131a, #0b0d17);
        color: white;
        font-family: "Inter", system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        text-align: center;
        overflow: hidden;
      }

      /* === Glass Loader Container === */
      .glass-loader {
        position: relative;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 0 30px rgba(245, 180, 0, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 2.2rem;
      }

      /* Farbverlauf-Ring */
      .glass-loader::before {
        content: "";
        position: absolute;
        inset: -4px;
        border-radius: 50%;
        background: conic-gradient(
          from 0deg,
          #3b82f6,
          #facc15,
          #8b5cf6,
          #3b82f6
        );
        animation: spin 2.4s linear infinite;
        mask: radial-gradient(transparent 68%, black 70%);
        -webkit-mask: radial-gradient(transparent 68%, black 70%);
      }

      /* Glow Effekt innen */
      .glass-loader::after {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: radial-gradient(
          circle at 30% 30%,
          rgba(255, 255, 255, 0.25),
          transparent 70%
        );
        pointer-events: none;
      }

      /* Pulsierendes Logo */
      .glass-loader img {
        width: 60px;
        filter: drop-shadow(0 0 8px rgba(245, 180, 0, 0.3));
        animation: pulse 2.8s ease-in-out infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      @keyframes pulse {
        0%, 100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }

      h2 {
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 0.4rem;
      }

      .status {
        font-size: 1rem;
        opacity: 0.8;
        transition: opacity 0.3s;
      }

      .fade-out {
        opacity: 0;
      }
    </style>
  </head>

  <body>
    <div class="glass-loader">
      <img src="/SmartPages_icon_transparent.png" alt="SmartPages Logo" loading="eager" decoding="async" />
    </div>

    <h2 id="statusText">{t.title}</h2>
    <p class="status" id="subText">{t.waiting}</p>

    <script is:inline>
      (async () => {
        const lang = "{lang}";
        const t = {
          success: "{t.success}",
          error: "{t.error}",
          waiting: "{t.waiting}",
          connecting: "{t.connecting}",
          notFound: "{t.notFound}",
          invalid: "{t.invalid}",
        };

        const statusEl = document.getElementById("statusText");
        const subEl = document.getElementById("subText");
        const url = new URL(window.location.href);
        const token = url.searchParams.get("token");

        if (!token) {
          statusEl.textContent = t.notFound;
          subEl.textContent = "";
          return;
        }

        try {
          const verifyUrl = `https://api.smartpages.online/api/auth/verify?token=${token}&lang=${lang}`;
          const verifyRes = await fetch(verifyUrl);
          const verifyData = await verifyRes.json();

          if (!verifyData.ok || !verifyData.redirect) {
            statusEl.textContent = t.invalid;
            subEl.textContent = "";
            return;
          }

          subEl.textContent = t.connecting;

          const confirmRes = await fetch(
            `https://api.smartpages.online${verifyData.redirect}`,
            { credentials: "include" }
          );
          const confirmData = await confirmRes.json();

          if (confirmData.ok && confirmData.redirect) {
            statusEl.textContent = t.success;
            subEl.classList.add("fade-out");
            setTimeout(() => {
              document.body.classList.add("fade-out");
              window.location.href = confirmData.redirect;
            }, 800);
          } else {
            statusEl.textContent = t.error;
            subEl.textContent = "";
          }
        } catch (err) {
          statusEl.textContent = "❌ Fehler: " + err.message;
          subEl.textContent = "";
        }
      })();
    </script>
  </body>
</html>
