---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductGrid from "~/components/shared/ProductGrid.astro";
import { t } from "~/utils/i18n/i18n";

const lang = Astro.props.lang ?? "de";

const products = [
  {
    key: "smartprofile",
    title: t(lang, "login", "products", "smartprofile", "title"),
    label: t(lang, "login", "products", "smartprofile", "label"),
    text:  t(lang, "login", "products", "smartprofile", "text"),
  },
  {
    key: "smartpage",
    title: t(lang, "login", "products", "smartpage", "title"),
    label: t(lang, "login", "products", "smartpage", "label"),
    text:  t(lang, "login", "products", "smartpage", "text"),
  },
  {
    key: "smartdomain",
    title: t(lang, "login", "products", "smartdomain", "title"),
    label: t(lang, "login", "products", "smartdomain", "label"),
    text:  t(lang, "login", "products", "smartdomain", "text"),
  },
  {
    key: "smartlinks",
    title: t(lang, "login", "products", "smartlinks", "title"),
    label: t(lang, "login", "products", "smartlinks", "label"),
    text:  t(lang, "login", "products", "smartlinks", "text"),
  },
];
---

<PageLayout
  lang={lang}
  page="login"
  sidebar={false}
  header={true}
>

  <!-- HERO + LOGIN -->
  <section class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 mt-10">

    <!-- HERO -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8">
      <h2 class="text-2xl font-bold mb-3">
        {t(lang, "login", "hero", "title")}
      </h2>
      <p class="text-gray-600">
        {t(lang, "login", "hero", "text")}
      </p>
    </div>

    <!-- LOGIN (JSON ONLY) -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8 space-y-4">

      <input
        id="first_name"
        type="text"
        placeholder={t(lang, "login", "form", "firstName")}
        class="border rounded px-3 py-2 w-full"
      />

      <input
        id="last_name"
        type="text"
        placeholder={t(lang, "login", "form", "lastName")}
        class="border rounded px-3 py-2 w-full"
      />

      <input
        id="email"
        type="email"
        placeholder={t(lang, "login", "form", "email")}
        class="border rounded px-3 py-2 w-full"
        required
      />

      <!-- BUSINESS TOGGLE -->
      <label class="flex items-center gap-2 text-sm text-gray-700">
        <input id="businessToggle" type="checkbox" />
        {t(lang, "login", "form", "business")}
      </label>

      <div id="companyField" class="hidden">
        <input
          id="company"
          type="text"
          placeholder={t(lang, "login", "form", "company")}
          class="border rounded px-3 py-2 w-full"
        />
      </div>

      <!-- BUTTON -->
      <button
        id="magicButton"
        type="button"
        class="
          mt-2
          bg-[#F5B400]
          text-white
          py-2
          rounded
          font-semibold
          shadow-md
          disabled:opacity-60
          disabled:cursor-not-allowed
        "
      >
        {t(lang, "login", "form", "button")}
      </button>

      <!-- HINT -->
      <p class="text-xs text-gray-500 leading-snug">
        {t(lang, "login", "form", "hint")}
      </p>

    </div>
  </section>

  <!-- PRODUCTS -->
  <section class="mt-14">
    <ProductGrid products={products} />
  </section>

</PageLayout>

<script>
  const btn = document.getElementById("magicButton");
  const toggle = document.getElementById("businessToggle");
  const companyField = document.getElementById("companyField");

  toggle?.addEventListener("change", () => {
    companyField.classList.toggle("hidden", !toggle.checked);
  });

  btn?.addEventListener("click", async () => {
    if (btn.disabled) return;

    btn.disabled = true;
    btn.textContent = "â€¦";

    const payload = {
      first_name: document.getElementById("first_name")?.value || "",
      last_name: document.getElementById("last_name")?.value || "",
      email: document.getElementById("email")?.value || "",
      lang: "{lang}",
    };

    if (toggle?.checked) {
      payload.company = document.getElementById("company")?.value || "";
    }

    try {
      await fetch("https://api.smartpages.online/api/auth/start", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify(payload),
      });
    } catch (err) {
      console.error("Magic link request failed", err);
    }
  });
</script>
