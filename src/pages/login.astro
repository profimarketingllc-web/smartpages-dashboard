---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductGrid from "~/components/shared/ProductGrid.astro";
import { t } from "~/utils/i18n/i18n";

const lang = Astro.props.lang ?? "de";

const products = [
  {
    key: "smartprofile",
    title: t(lang, "login", "products", "smartprofile", "title"),
    text:  t(lang, "login", "products", "smartprofile", "text"),
  },
  {
    key: "smartpage",
    title: t(lang, "login", "products", "smartpage", "title"),
    text:  t(lang, "login", "products", "smartpage", "text"),
  },
  {
    key: "smartdomain",
    title: t(lang, "login", "products", "smartdomain", "title"),
    text:  t(lang, "login", "products", "smartdomain", "text"),
  },
  {
    key: "smartlinks",
    title: t(lang, "login", "products", "smartlinks", "title"),
    text:  t(lang, "login", "products", "smartlinks", "text"),
  },
];
---
<PageLayout
  lang={lang}
  page="login"
  sidebar={false}
  header={true}
>

  <!-- HERO + FORM -->
  <section class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">

    <!-- üëã HERO -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8">
      <h2 class="text-2xl font-bold mb-3">
        {t(lang, "login", "hero", "title")}
      </h2>
      <p class="text-gray-600">
        {t(lang, "login", "hero", "text")}
      </p>
    </div>

    <!-- üîê FORM -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8">
      <form id="magicForm" class="grid gap-4">
        <label>{t(lang, "login", "form", "firstName")} *</label>
        <input name="first_name" required />

        <label>{t(lang, "login", "form", "lastName")}</label>
        <input name="last_name" />

        <label>{t(lang, "login", "form", "email")} *</label>
        <input type="email" name="email" required />

        <button
          type="submit"
          class="bg-[#F5B400] text-white py-2 rounded font-semibold"
        >
          {t(lang, "login", "form", "button")}
        </button>

        <div id="formMessage" class="text-sm"></div>
      </form>
    </div>

  </section>

  <!-- üß© PRODUCTS -->
  <section class="mt-12">
    <ProductGrid products={products} />
  </section>

</PageLayout>

<script>
  const form = document.getElementById("magicForm");
  const msg  = document.getElementById("formMessage");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    msg.textContent = "";

    const data = Object.fromEntries(new FormData(form));

    try {
      const res = await fetch("https://api.smartpages.online/api/auth/start", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ ...data, lang: "{lang}" }),
      });

      const result = await res.json();

      if (result.ok) {
        msg.textContent = "‚úÖ Magic Link gesendet.";
        msg.className = "text-green-600";
      } else {
        msg.textContent = "‚ùå Fehler beim Senden.";
        msg.className = "text-red-600";
      }
    } catch {
      msg.textContent = "‚ùå Netzwerkfehler.";
      msg.className = "text-red-600";
    }
  });
</script>
