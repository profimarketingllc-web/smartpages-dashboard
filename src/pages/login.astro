---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductGrid from "~/components/shared/ProductGrid.astro";
import { t } from "~/utils/i18n/i18n";

const lang = Astro.props.lang ?? "de";

const products = [
  {
    key: "smartprofile",
    title: t(lang, "login", "products", "smartprofile", "title"),
    label: t(lang, "login", "products", "smartprofile", "label"),
    text:  t(lang, "login", "products", "smartprofile", "text"),
  },
  {
    key: "smartpage",
    title: t(lang, "login", "products", "smartpage", "title"),
    label: t(lang, "login", "products", "smartpage", "label"),
    text:  t(lang, "login", "products", "smartpage", "text"),
  },
  {
    key: "smartdomain",
    title: t(lang, "login", "products", "smartdomain", "title"),
    label: t(lang, "login", "products", "smartdomain", "label"),
    text:  t(lang, "login", "products", "smartdomain", "text"),
  },
  {
    key: "smartlinks",
    title: t(lang, "login", "products", "smartlinks", "title"),
    label: t(lang, "login", "products", "smartlinks", "label"),
    text:  t(lang, "login", "products", "smartlinks", "text"),
  },
];
---

<PageLayout lang={lang} page="login" sidebar={false} header>

  <section class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 mt-12">

    <!-- HERO -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8">
      <h2 class="text-2xl font-bold mb-3">
        {t(lang, "login", "hero", "title")}
      </h2>
      <p class="text-gray-600">
        {t(lang, "login", "hero", "text")}
      </p>
    </div>

    <!-- LOGIN -->
    <div class="dashboard-card bg-white rounded-xl shadow p-8 space-y-5">

      <!-- FIRST NAME -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          {t(lang, "login", "form", "firstName")}
        </label>
        <input
          id="first_name"
          type="text"
          class="w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- LAST NAME -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          {t(lang, "login", "form", "lastName")}
        </label>
        <input
          id="last_name"
          type="text"
          class="w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- EMAIL -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          {t(lang, "login", "form", "email")}
        </label>
        <input
          id="email"
          type="email"
          required
          class="w-full rounded-lg border border-gray-400 bg-gray-100 px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- BUSINESS BOX -->
      <div
        id="businessBox"
        class="
          cursor-pointer
          rounded-lg
          border
          border-gray-300
          bg-gray-50
          px-4
          py-3
          text-sm
          text-gray-700
          flex
          items-center
          gap-2
        "
      >
        <input type="checkbox" id="businessToggle" />
        <span>{t(lang, "login", "form", "business")}</span>
      </div>

      <!-- COMPANY FIELD -->
      <div id="companyRow" class="hidden">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          {t(lang, "login", "form", "company")}
        </label>
        <input
          id="company"
          type="text"
          class="w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 focus:outline-none"
        />
      </div>

      <!-- BUTTON -->
      <div class="pt-4 flex justify-center">
        <button
          id="magicButton"
          type="button"
          class="
            w-full
            max-w-sm
            bg-[#F5B400]
            text-white
            py-3
            rounded-lg
            font-semibold
            shadow-md
            disabled:opacity-60
            disabled:cursor-not-allowed
          "
        >
          {t(lang, "login", "form", "button")}
        </button>
      </div>

      <!-- HINT (DESIGN ONLY, TEXT LATER) -->
      <p class="text-xs text-gray-400 text-center leading-snug">
        {t(lang, "login", "form", "hint")}
      </p>

    </div>
  </section>

  <!-- PRODUCTS -->
  <section class="mt-16">
    <ProductGrid products={products} />
  </section>

</PageLayout>

<script>
  const toggle = document.getElementById("businessToggle");
  const box = document.getElementById("businessBox");
  const row = document.getElementById("companyRow");
  const btn = document.getElementById("magicButton");

  box?.addEventListener("click", () => {
    toggle.checked = true;
    box.classList.add("hidden");
    row.classList.remove("hidden");
  });

  btn?.addEventListener("click", async () => {
    if (btn.disabled) return;

    btn.disabled = true;
    btn.textContent = "â€¦";

    const payload = {
      first_name: document.getElementById("first_name")?.value || "",
      last_name: document.getElementById("last_name")?.value || "",
      email: document.getElementById("email")?.value || "",
      lang: "{lang}",
    };

    if (!row.classList.contains("hidden")) {
      payload.company = document.getElementById("company")?.value || "";
    }

    try {
      await fetch("https://api.smartpages.online/api/auth/start", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify(payload),
      });
    } catch (err) {
      console.error(err);
    }
  });
</script>
