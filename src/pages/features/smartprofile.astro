---
import PageLayout from "~/layouts/PageLayout.astro";
import ProductPill from "~/components/shared/ProductPill.astro";

const lang = "de"; // MVP-Fallback
---

<PageLayout title="SmartProfile – Features" sidebar header lang={lang}>
  <ProductPill label="SmartProfile" color="blue" />

  <main class="max-w-4xl mx-auto px-6 py-10 space-y-6">
    <h1 class="text-3xl font-extrabold">SmartProfile</h1>

    <p class="text-gray-600">
      Dein öffentliches Profil für Bio-Links, Socials & Business-Infos.
    </p>

    <ul class="list-disc pl-6 text-gray-700 space-y-2">
      <li>Persönliche Profilseite</li>
      <li>Social & Kontakt-Links</li>
      <li>DSGVO-konform gehostet</li>
    </ul>

    <a
      href="https://api.smartpages.online/api/billing/checkout?product=smartprofile"
      class="inline-block mt-6 rounded-xl bg-black text-white px-6 py-3"
    >
      Jetzt freischalten
    </a>
  </main>
</PageLayout>
